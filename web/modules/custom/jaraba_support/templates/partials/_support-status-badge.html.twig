{% set status_labels = {
  'new': 'New'|t,
  'ai_handling': 'AI Handling'|t,
  'open': 'Open'|t,
  'pending_customer': 'Pending Customer'|t,
  'pending_internal': 'Pending Internal'|t,
  'escalated': 'Escalated'|t,
  'resolved': 'Resolved'|t,
  'closed': 'Closed'|t,
  'reopened': 'Reopened'|t,
  'merged': 'Merged'|t,
} %}

<span class="support-badge support-badge--status-{{ status|default('open') }}"
      aria-label="{{ status_labels[status]|default(status) }}">
  {{ status_labels[status]|default(status) }}
</span>
