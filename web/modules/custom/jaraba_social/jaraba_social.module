<?php

/**
 * @file
 * Hooks de jaraba_social.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_preprocess_html().
 *
 * Añade body classes para rutas del módulo social.
 * ⚠️ OBLIGATORIO: attributes.addClass() en Twig NO funciona para body.
 */
function jaraba_social_preprocess_html(array &$variables): void {
  $route_name = \Drupal::routeMatch()->getRouteName();

  if ($route_name && str_starts_with($route_name, 'jaraba_social.')) {
    $variables['attributes']['class'][] = 'page-social';
    $variables['attributes']['class'][] = 'page-frontend-clean';
    $variables['attributes']['class'][] = 'layout-full-width';
  }
}

/**
 * Implements hook_theme().
 */
function jaraba_social_theme(): array {
  return [
    'social_dashboard' => [
      'variables' => [
        'stats' => [],
      ],
      'template' => 'social-dashboard',
    ],
    'page__social' => [
      'template' => 'page--social',
      'base hook' => 'page',
    ],
  ];
}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function jaraba_social_theme_suggestions_page_alter(array &$suggestions, array $variables): void {
  $route_name = \Drupal::routeMatch()->getRouteName();

  if ($route_name && str_starts_with($route_name, 'jaraba_social.')) {
    $suggestions[] = 'page__social';
  }
}
