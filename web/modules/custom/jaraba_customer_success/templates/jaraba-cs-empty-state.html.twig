{#
/**
 * @file
 * jaraba-cs-empty-state.html.twig - Estado vacío con setup wizard.
 *
 * VARIABLES:
 * - title: título del estado vacío
 * - message: mensaje descriptivo
 * - action_url: URL de acción (opcional)
 * - action_label: etiqueta del botón (opcional)
 */
#}

<div class="cs-empty-state">
  <div class="cs-empty-state__icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/>
      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
      <line x1="12" y1="17" x2="12.01" y2="17"/>
    </svg>
  </div>
  <h3 class="cs-empty-state__title">{{ title }}</h3>
  <p class="cs-empty-state__message">{{ message }}</p>
  {% if action_url and action_label %}
    <a href="{{ action_url }}" class="cs-empty-state__action">{{ action_label }}</a>
  {% endif %}
</div>
