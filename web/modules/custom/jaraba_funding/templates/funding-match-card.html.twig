{#
/**
 * @file
 * Template for a funding match card.
 *
 * Variables:
 * - match: The FundingMatch entity.
 * - call: The FundingCall entity.
 * - score: The overall matching score (0-100).
 * - breakdown: Array with score breakdown details.
 *
 * @see jaraba_funding_theme()
 */
#}
<div class="funding-match-card" data-score="{{ score }}">
  <div class="funding-match-card__header">
    <h3 class="funding-match-card__title">{{ call.title.value }}</h3>
    <span class="funding-match-card__score">{{ score|number_format(1) }}%</span>
  </div>
  <div class="funding-match-card__body">
    <div class="funding-match-card__meta">
      <span class="funding-match-card__region">{{ call.region.value }}</span>
      <span class="funding-match-card__type">{{ call.call_type.value }}</span>
    </div>
    {% if breakdown %}
    <div class="funding-match-card__breakdown">
      {% for key, value in breakdown %}
        <div class="funding-match-card__breakdown-item">
          <span class="funding-match-card__breakdown-label">{{ key }}</span>
          <span class="funding-match-card__breakdown-value">{{ value }}%</span>
        </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>
