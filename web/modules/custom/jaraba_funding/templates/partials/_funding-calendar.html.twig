{#
/**
 * @file
 * Calendar view partial for funding deadlines.
 *
 * Simple month-based calendar with deadline markers and upcoming list.
 */
#}
<div class="funding-calendar" id="funding-calendar">
  {# Month header with navigation #}
  <div class="funding-calendar__header">
    <button class="funding-calendar__nav funding-calendar__nav--prev" id="funding-calendar-prev" aria-label="{{ 'Mes anterior'|t }}">
      &laquo;
    </button>
    <h3 class="funding-calendar__month-title" id="funding-calendar-month-title"></h3>
    <button class="funding-calendar__nav funding-calendar__nav--next" id="funding-calendar-next" aria-label="{{ 'Mes siguiente'|t }}">
      &raquo;
    </button>
  </div>

  {# Weekday headers #}
  <div class="funding-calendar__weekdays">
    <span class="funding-calendar__weekday">{{ 'Lun'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Mar'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Mie'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Jue'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Vie'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Sab'|t }}</span>
    <span class="funding-calendar__weekday">{{ 'Dom'|t }}</span>
  </div>

  {# Calendar grid (rendered via JS) #}
  <div class="funding-calendar__grid" id="funding-calendar-grid"></div>

  {# Upcoming deadlines list #}
  <div class="funding-calendar__upcoming">
    <h4 class="funding-calendar__upcoming-title">{{ 'Proximos plazos'|t }}</h4>
    <ul class="funding-calendar__upcoming-list" id="funding-calendar-upcoming-list">
      <li class="funding-calendar__upcoming-empty">{{ 'No hay plazos proximos.'|t }}</li>
    </ul>
  </div>
</div>
