{#
/**
 * @file
 * Partial: Funding copilot widget.
 *
 * Variables:
 * - enabled: Whether the copilot is enabled.
 */
#}
{% if enabled %}
<div class="ej-funding-copilot" id="funding-copilot-widget" style="display: none;">
  <div class="ej-funding-copilot__header">
    <h4>{{ 'Copilot de Subvenciones'|t }}</h4>
    <button class="ej-funding-copilot__close" aria-label="{{ 'Cerrar copilot'|t }}">&times;</button>
  </div>
  <div class="ej-funding-copilot__messages" id="funding-copilot-messages">
    {# Chat messages populated via JS #}
  </div>
  <div class="ej-funding-copilot__input">
    <input type="text" class="ej-funding-copilot__input-field" placeholder="{{ 'Pregunta sobre subvenciones...'|t }}" />
    <button class="ej-funding-copilot__send" aria-label="{{ 'Enviar'|t }}">{{ 'Enviar'|t }}</button>
  </div>
</div>
{% endif %}
