{#
/**
 * @file
 * Dashboard de certificaciones del usuario.
 *
 * Variables:
 * - credentials: Array de datos de credenciales (credential, template, qr_code, verification_url, linkedin_url)
 * - user: Entidad de usuario actual.
 * - total_count: Total de credenciales emitidas.
 */
#}
<div class="credentials-dashboard">
  <header class="credentials-dashboard__header">
    <div class="credentials-dashboard__welcome">
      <h1 class="credentials-dashboard__title">{{ 'Mis Certificaciones'|t }}</h1>
      <p class="credentials-dashboard__subtitle">
        {% trans %}Gestiona y comparte tus logros académicos y profesionales acreditados.{% endtrans %}
      </p>
    </div>
    <div class="credentials-dashboard__stats">
      <div class="credentials-dashboard__stat-badge">
        <span class="stat-value">{{ total_count }}</span>
        <span class="stat-label">{% trans %}Acreditaciones{% endtrans %}</span>
      </div>
    </div>
  </header>

  {% if total_count > 0 %}
    <div class="credentials-dashboard__grid">
      {% for item in credentials %}
        {% set cred = item.credential %}
        {% set temp = item.template %}
        
        <article class="credential-card credential-card--{{ cred.get('status').value }}">
          <div class="credential-card__image">
            {% if temp.image.entity %}
              <img src="{{ file_url(temp.image.entity.fileuri) }}" alt="{{ temp.label }}">
            {% else %}
              <div class="credential-card__placeholder">
                {{ jaraba_icon('ui', 'award', { size: '48px', variant: 'duotone' }) }}
              </div>
            {% endif %}
            
            <div class="credential-card__status-badge status--{{ cred.get('status').value }}">
              {{ cred.get('status').value|capitalize|t }}
            </div>
          </div>

          <div class="credential-card__content">
            <h3 class="credential-card__name">{{ temp.label }}</h3>
            <div class="credential-card__meta">
              <span class="meta-item">
                {{ jaraba_icon('ui', 'calendar', { size: '14px' }) }}
                {{ cred.get('issued_on').value|date('d M Y') }}
              </span>
              {% if cred.get('expires_on').value %}
                <span class="meta-item">
                  {{ jaraba_icon('ui', 'clock', { size: '14px' }) }}
                  {{ 'Expira:'|t }} {{ cred.get('expires_on').value|date('d M Y') }}
                </span>
              {% endif %}
            </div>
            
            <div class="credential-card__issuer">
              {% if temp.getIssuer.image.entity %}
                <img src="{{ file_url(temp.getIssuer.image.entity.fileuri) }}" alt="{{ temp.getIssuer.label }}">
              {% endif %}
              <span>{{ temp.getIssuer.label }}</span>
            </div>
          </div>

          <div class="credential-card__actions">
            {# Botón LinkedIn #}
            <a href="{{ item.linkedin_url }}" 
               class="btn-share-linkedin" 
               target="_blank" 
               rel="noopener"
               title="{{ 'Añadir a mi perfil de LinkedIn'|t }}">
              <svg viewBox="0 0 24 24" width="20" height="20"><path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z" fill="white"/></svg>
              <span>{{ 'Añadir a LinkedIn'|t }}</span>
            </a>

            <div class="btn-group">
              {# Verificación Pública #}
              <a href="{{ item.verification_url }}" 
                 class="btn-action btn-secondary" 
                 target="_blank"
                 title="{{ 'Ver certificado online'|t }}">
                {{ jaraba_icon('ui', 'external-link', { size: '18px' }) }}
              </a>
              
              {# Descarga PDF #}
              <a href="/my-certifications/{{ cred.uuid.value }}/pdf" 
                 class="btn-action btn-secondary"
                 title="{{ 'Descargar PDF oficial'|t }}">
                {{ jaraba_icon('ui', 'download', { size: '18px' }) }}
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <div class="credentials-dashboard__empty">
      <div class="empty-icon">
        {{ jaraba_icon('ui', 'award', { size: '64px', variant: 'duotone', color: 'neutral' }) }}
      </div>
      <h3>{% trans %}Aún no tienes certificaciones emitidas.{% endtrans %}</h3>
      <p>{% trans %}Completa tus cursos activos para obtener tus acreditaciones oficiales.{% endtrans %}</p>
      <a href="/courses" class="btn-primary">{% trans %}Explorar catálogo de formación{% endtrans %}</a>
    </div>
  {% endif %}
</div>
