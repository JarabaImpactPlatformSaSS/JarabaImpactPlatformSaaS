{#
/**
 * @file
 * Template para dashboard de credenciales del usuario.
 *
 * Variables disponibles:
 * - credentials: Array de credenciales con template y QR
 * - user: Usuario actual
 * - total_count: Número total de credenciales
 *
 * @ingroup themeable
 */
#}

<div class="credentials-dashboard">
  
  {# Header del dashboard #}
  <div class="credentials-dashboard__header">
    <div class="credentials-dashboard__title-group">
      <h1 class="credentials-dashboard__title">{% trans %}Mis Certificaciones{% endtrans %}</h1>
      <p class="credentials-dashboard__subtitle">
        {% trans %}Gestiona y comparte tus badges y certificados digitales{% endtrans %}
      </p>
    </div>
    <div class="credentials-dashboard__stats">
      <div class="credentials-dashboard__stat">
        <span class="credentials-dashboard__stat-value">{{ total_count }}</span>
        <span class="credentials-dashboard__stat-label">
          {% trans %}Credenciales{% endtrans %}
        </span>
      </div>
    </div>
  </div>

  {# Lista de credenciales #}
  {% if credentials|length > 0 %}
    <div class="credentials-grid">
      {% for item in credentials %}
        {% set credential = item.credential %}
        {% set template = item.template %}
        
        <article class="credential-item {{ credential.status.value != 'active' ? 'credential-item--inactive' : '' }}">
          
          {# Imagen del badge #}
          <div class="credential-item__image">
            {% if template and template.image.entity %}
              <img src="{{ file_url(template.image.entity.uri.value) }}" 
                   alt="{{ template.name.value }}"
                   class="credential-item__badge" />
            {% else %}
              <div class="credential-item__placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="48" height="48">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
              </div>
            {% endif %}
          </div>

          {# Contenido #}
          <div class="credential-item__content">
            <h3 class="credential-item__title">
              {{ template ? template.name.value : credential.credential_id_uri.value }}
            </h3>
            
            <div class="credential-item__meta">
              <span class="credential-item__date">
                {{ credential.issued_on.value|date('d/m/Y') }}
              </span>
              <span class="credential-item__status credential-item__status--{{ credential.status.value }}">
                {% if credential.status.value == 'active' %}
                  {% trans %}Activa{% endtrans %}
                {% elseif credential.status.value == 'revoked' %}
                  {% trans %}Revocada{% endtrans %}
                {% elseif credential.status.value == 'expired' %}
                  {% trans %}Expirada{% endtrans %}
                {% elseif credential.status.value == 'suspended' %}
                  {% trans %}Suspendida{% endtrans %}
                {% endif %}
              </span>
            </div>
          </div>

          {# Acciones #}
          <div class="credential-item__actions">
            <a href="{{ item.verification_url }}" 
               class="credential-item__action credential-item__action--verify"
               target="_blank"
               rel="noopener noreferrer">
              {% trans %}Verificar{% endtrans %}
            </a>
            
            <button type="button"
                    class="credential-item__action credential-item__action--share"
                    data-share-url="{{ item.verification_url }}"
                    data-share-title="{{ template ? template.name.value : 'Credencial' }}">
              {% trans %}Compartir{% endtrans %}
            </button>

            {% if credential.pdf_file.entity %}
              <a href="{{ file_url(credential.pdf_file.entity.uri.value) }}" 
                 class="credential-item__action credential-item__action--download"
                 download>
                {% trans %}Descargar PDF{% endtrans %}
              </a>
            {% endif %}
          </div>

        </article>
      {% endfor %}
    </div>
  {% else %}
    {# Estado vacío #}
    <div class="credentials-empty">
      <div class="credentials-empty__icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="64" height="64">
          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
        </svg>
      </div>
      <h2 class="credentials-empty__title">{% trans %}Aún no tienes credenciales{% endtrans %}</h2>
      <p class="credentials-empty__description">
        {% trans %}Completa cursos y programas de certificación para obtener badges y certificados verificables.{% endtrans %}
      </p>
      <a href="/training" class="credentials-empty__cta">
        {% trans %}Explorar formación{% endtrans %}
      </a>
    </div>
  {% endif %}

</div>
