{{ attach_library('jaraba_agroconecta_core/agroconecta.notifications') }}

<div class="agro-bell" data-agro-notifications>
  <button type="button" class="agro-bell__toggle" aria-label="{{ 'Notificaciones'|t }}">
    {{ jaraba_icon('general', 'bell', { size: '20px' }) }}
    <span class="agro-bell__badge" style="display: none;">0</span>
  </button>

  <div class="agro-bell__dropdown">
    <div class="agro-bell__header">
      <h3>{{ 'Notificaciones'|t }}</h3>
    </div>
    <div class="agro-bell__list">
      <p class="agro-bell__empty">{{ 'Cargando...'|t }}</p>
    </div>
  </div>
</div>
