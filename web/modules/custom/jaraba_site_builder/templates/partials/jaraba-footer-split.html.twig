{#
/**
 * @file
 * Footer variante: Split (Canvas v2)
 *
 * Logo izquierda, links derecha.
 * Uso: Sitios corporativos, SaaS, landing pages.
 */
#}
<footer class="jaraba-footer jaraba-footer--split" role="contentinfo" data-grapesjs-type="jaraba-footer" data-footer-type="split">
  <div class="jaraba-footer__container">
    {# Sección principal split #}
    <div class="jaraba-footer__split-main">
      {# Columna izquierda: Brand + descripción #}
      <div class="jaraba-footer__split-left">
        {% if logo %}
          <img src="{{ logo }}" alt="{{ site_name }}" class="jaraba-footer__logo" />
        {% else %}
          <span class="jaraba-footer__site-name">{{ site_name }}</span>
        {% endif %}
        
        {% if config.tagline %}
          <p class="jaraba-footer__tagline">{{ config.tagline }}</p>
        {% endif %}

        {% if show_social and social_links %}
          <div class="jaraba-footer__social">
            {% for social in social_links %}
              <a href="{{ social.url }}" class="jaraba-footer__social-link" target="_blank" rel="noopener" aria-label="{{ social.platform }}">
                <svg class="jaraba-footer__social-icon" width="20" height="20">
                  <use xlink:href="#icon-{{ social.platform|lower }}"></use>
                </svg>
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {# Columna derecha: Navegación #}
      <div class="jaraba-footer__split-right">
        {% if navigation %}
          <nav class="jaraba-footer__nav" aria-label="{{ 'Navegación footer'|t }}">
            <ul class="jaraba-footer__nav-list jaraba-footer__nav-list--inline">
              {% for item in navigation %}
                <li class="jaraba-footer__nav-item">
                  <a href="{{ item.url }}" class="jaraba-footer__nav-link">
                    {{ item.label }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </div>
    </div>

    {# Barra inferior #}
    <div class="jaraba-footer__bottom jaraba-footer__bottom--split">
      <div class="jaraba-footer__copyright">
        {{ copyright }}
      </div>
      <nav class="jaraba-footer__legal-nav">
        <a href="/privacidad" class="jaraba-footer__legal-link">{{ 'Privacidad'|t }}</a>
        <a href="/terminos" class="jaraba-footer__legal-link">{{ 'Términos'|t }}</a>
      </nav>
    </div>
  </div>
</footer>
