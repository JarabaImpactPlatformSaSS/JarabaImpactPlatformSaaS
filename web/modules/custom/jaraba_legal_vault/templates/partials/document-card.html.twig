{% if document %}
<article class="ej-document-card ej-document-card--{{ document.status|default('active') }}">
  <div class="ej-document-card__header">
    <span class="ej-document-card__icon">
      <svg class="ej-icon" aria-hidden="true"><use href="#icon-document-encrypted"></use></svg>
    </span>
    <span class="ej-badge ej-badge--{{ document.status|default('active') }}">
      {{ document.status|default('active')|t }}
    </span>
  </div>
  <h3 class="ej-document-card__title">{{ document.title }}</h3>
  <div class="ej-document-card__meta">
    <span class="ej-document-card__filename">{{ document.original_filename }}</span>
    <span class="ej-document-card__size">{{ document.file_size_formatted|default('') }}</span>
  </div>
  <div class="ej-document-card__footer">
    <span class="ej-document-card__version">v{{ document.version|default(1) }}</span>
    {% if document.is_signed %}
      <span class="ej-document-card__signed ej-badge ej-badge--success">{{ 'Firmado'|t }}</span>
    {% endif %}
    <span class="ej-document-card__owner">{{ document.owner|default('') }}</span>
  </div>
</article>
{% endif %}
