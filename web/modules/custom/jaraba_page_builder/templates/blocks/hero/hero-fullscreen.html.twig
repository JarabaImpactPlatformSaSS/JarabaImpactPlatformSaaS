{#
/**
 * @file
 * Template para Hero Fullscreen.
 *
 * Variables disponibles:
 * - content: Array con los datos configurados:
 *   - eyebrow: Texto eyebrow
 *   - title: Título principal
 *   - subtitle: Subtítulo
 *   - cta_primary_text: Texto del CTA principal
 *   - cta_primary_url: URL del CTA principal
 *   - cta_secondary_text: Texto del CTA secundario
 *   - cta_secondary_url: URL del CTA secundario
 *   - background_image: URL de imagen de fondo
 *   - overlay_opacity: Opacidad del overlay (0-100)
 */
#}

<section
  class="jaraba-hero jaraba-hero--fullscreen jaraba-block"
  data-block-type="hero_fullscreen"
  style="
    --hero-overlay-opacity: {{ (content.overlay_opacity|default(50)) / 100 }};
    {% if content.background_image %}
      --hero-bg-image: url('{{ content.background_image }}');
    {% endif %}
  "
>
  {# Overlay #}
  <div class="jaraba-hero__overlay"></div>

  {# Contenido #}
  <div class="jaraba-hero__content jaraba-block__container">
    {% if content.eyebrow %}
      <span class="jaraba-hero__eyebrow">{{ content.eyebrow }}</span>
    {% endif %}

    <h1 class="jaraba-hero__title">{{ content.title }}</h1>

    {% if content.subtitle %}
      <div class="jaraba-hero__subtitle">{{ content.subtitle|safe_html }}</div>
    {% endif %}

    {# CTAs #}
    <div class="jaraba-hero__actions">
      {% if content.cta_primary_text and content.cta_primary_url %}
        <a href="{{ content.cta_primary_url }}" class="jaraba-btn jaraba-btn--primary jaraba-btn--lg">
          {{ content.cta_primary_text }}
        </a>
      {% endif %}

      {% if content.cta_secondary_text and content.cta_secondary_url %}
        <a href="{{ content.cta_secondary_url }}" class="jaraba-btn jaraba-btn--ghost jaraba-btn--lg">
          {{ content.cta_secondary_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>
