{#
 # Template: ComercioConecta - Historia de la Marca
 # Category: comercioconecta
 # Type: content
 #
 # Grid 2 columnas: texto + media
 #}
<section class="pb-section pb-section--content pb-section--comercioconecta"
         aria-label="{{ title|default('Sobre Tu Tienda')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__text">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Tu Tienda')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Conecta con tus clientes donde estén')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Presenta tus productos y servicios con una experiencia digital que refleja la calidad de tu comercio.')|t }}</p>
      {% if description %}
        <div class="pb-section__description">{{ description|safe_html }}</div>
      {% else %}
        <div class="pb-section__description">{{ 'Desde catálogos interactivos hasta sistemas de pedidos, ofrecemos las herramientas que tu comercio necesita para crecer en la era digital.'|t }}</div>
      {% endif %}
      {% if cta_text and cta_url %}
        <div class="pb-section__actions">
          <a href="{{ cta_url }}" class="pb-section__cta pb-section__cta--primary">{{ cta_text }}</a>
        </div>
      {% endif %}
    </div>
    <div class="pb-section__media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">&#128717;</div>
      {% endif %}
    </div>
  </div>
</section>
