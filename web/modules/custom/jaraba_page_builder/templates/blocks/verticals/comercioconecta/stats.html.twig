{#
 # Template: ComercioConecta - Métricas de Ventas
 # Category: comercioconecta
 # Type: stats
 #
 # Header + fila de 4 stat counters (número grande + label)
 #}
<section class="pb-section pb-section--stats pb-section--comercioconecta"
         aria-label="{{ title|default('Nuestras Cifras')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Resultados que hablan por sí solos')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Cifras que demuestran el impacto de ComercioConecta en negocios locales.')|t }}</p>
    </div>
    <div class="pb-section__stats-row">
      {% set default_stats = [
        { number: '+500', label: 'Comercios activos' },
        { number: '85%', label: 'Aumento en ventas' },
        { number: '+12K', label: 'Clientes conectados' },
        { number: '4.8★', label: 'Satisfacción media' }
      ] %}
      {% set items = stats|default(default_stats) %}
      {% for stat in items %}
        <div class="pb-section__stat">
          <span class="pb-section__stat-number">{{ stat.number|default('0') }}</span>
          <span class="pb-section__stat-label">{{ stat.label|default('Métrica')|t }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
