{#
 # Template: ComercioConecta - Escaparate de Tienda
 # Category: comercioconecta
 # Type: hero
 #
 # Split layout: hero content (eyebrow + h2 + subtitle + CTAs) + media
 # Premium: animations, parallax media, background image, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--hero pb-section--comercioconecta jaraba-block jaraba-block--premium"
         aria-label="{{ title|default('Escaparate de Tienda')|t }}"
         data-effect="fade-up"
         {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %}>
  <div class="pb-section__container">
    <div class="pb-section__hero-content">
      <span class="pb-section__eyebrow">{{ eyebrow|default('ComercioConecta')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Lleva tu tienda al siguiente nivel')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Herramientas digitales para impulsar tus ventas, conectar con clientes y hacer crecer tu negocio local.')|t }}</p>
      <div class="pb-section__actions">
        <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
          {{ cta_text|default('Empieza ahora')|t }}
        </a>
        {% if cta_secondary_text is defined %}
          <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
            {{ cta_secondary_text }}
          </a>
        {% else %}
          <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Ver planes'|t }}</a>
        {% endif %}
      </div>
    </div>
    <div class="pb-section__media" data-parallax="0.3">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">
          {{ jaraba_icon('commerce', 'store', { variant: 'duotone', size: '48px', color: 'primary' }) }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
