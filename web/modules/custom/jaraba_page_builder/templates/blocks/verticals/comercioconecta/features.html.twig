{#
 # Template: ComercioConecta - Catálogo de Productos
 # Category: comercioconecta
 # Type: features
 #
 # Header centrado + grid de 3 feature cards (icono + título + descripción)
 #}
<section class="pb-section pb-section--features pb-section--comercioconecta"
         aria-label="{{ title|default('Nuestros Servicios')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Servicios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Todo lo que tu comercio necesita')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Herramientas diseñadas para potenciar la gestión y ventas de tu negocio.')|t }}</p>
    </div>
    <div class="pb-section__features-grid">
      {% set default_features = [
        { icon: '&#128722;', title: 'Catálogo digital', desc: 'Muestra tus productos con fotos, precios y descripciones actualizadas en tiempo real.' },
        { icon: '&#128200;', title: 'Gestión de ventas', desc: 'Lleva el control de tus pedidos, inventario y facturación desde un solo lugar.' },
        { icon: '&#128241;', title: 'Presencia online', desc: 'Tu tienda visible en internet con un perfil profesional y atractivo.' }
      ] %}
      {% set items = features|default(default_features) %}
      {% for feature in items %}
        <div class="pb-section__feature-card">
          <div class="pb-section__feature-icon" aria-hidden="true">{{ feature.icon|default('&#9733;')|raw }}</div>
          <h3 class="pb-section__feature-title">{{ feature.title|default('Característica')|t }}</h3>
          <p class="pb-section__feature-desc">{{ feature.desc|default('Descripción de la característica.')|t }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
