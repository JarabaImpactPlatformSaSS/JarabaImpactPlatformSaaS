{#
 # Template: ComercioConecta - Catalogo de Productos
 # Category: comercioconecta
 # Type: features
 #
 # Header centrado + grid de 3 feature cards (icono + titulo + descripcion)
 # Premium: staggered animations, jaraba_icon system, configurable columns
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--features pb-section--comercioconecta jaraba-block jaraba-block--premium"
         data-block-type="comercioconecta_features"
         aria-label="{{ title|default('Nuestros Servicios')|t }}"
         data-effect="fade-up"
         {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %}>
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Funcionalidades')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Todo lo que tu comercio necesita')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Herramientas disenadas para potenciar la gestion y ventas de tu negocio.')|t }}</p>
    </div>
    <div class="pb-section__features-grid pb-section__features-grid--{{ columns|default(3) }}-cols">
      {% set default_features = [
        { icon: 'catalog', title: 'Catalogo digital', desc: 'Muestra tus productos con fotos, precios y descripciones actualizadas en tiempo real.' },
        { icon: 'sales', title: 'Gestion de ventas', desc: 'Lleva el control de tus pedidos, inventario y facturacion desde un solo lugar.' },
        { icon: 'presence', title: 'Presencia online', desc: 'Tu tienda visible en internet con un perfil profesional y atractivo.' }
      ] %}
      {% set items = features|default(default_features) %}
      {% for feature in items %}
        <div class="pb-section__feature-card"
             data-effect="fade-up"
             data-delay="{{ loop.index0 * 100 }}">
          <div class="pb-section__feature-icon" aria-hidden="true">
            {{ jaraba_icon('general', feature.icon|default('features'), { variant: 'duotone', size: '32px', color: 'azul-corporativo' }) }}
          </div>
          <h3 class="pb-section__feature-title">{{ feature.title|default('Caracteristica')|t }}</h3>
          <p class="pb-section__feature-desc">{{ feature.desc|default('Descripcion de la caracteristica.')|t }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
