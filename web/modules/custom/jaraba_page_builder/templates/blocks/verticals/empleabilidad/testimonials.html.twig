{#
 # Template: Empleabilidad - Historias de Éxito
 # Category: empleabilidad
 # Type: testimonials
 #
 # Header + grid de 3 quote cards con comilla decorativa, avatar, nombre/cargo
 #}
<section class="pb-section pb-section--testimonials pb-section--empleabilidad"
         aria-label="{{ title|default('Historias de éxito')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Testimonios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Historias que inspiran')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Personas reales que transformaron su carrera profesional con nuestro acompañamiento.')|t }}</p>
    </div>
    <div class="pb-section__testimonials-grid">
      {% set default_testimonials = [
        { quote: 'Gracias a la formación en UX y la bolsa de empleo, encontré trabajo como diseñadora en solo 3 semanas. El acompañamiento fue clave.', name: 'Sofía Delgado', role: 'Diseñadora UX, encontró empleo en 3 semanas', initials: 'SD' },
        { quote: 'Después de 10 años en hostelería, me formé en programación y hoy trabajo como desarrollador web. Nunca pensé que fuera posible.', name: 'Javier Romero', role: 'Reconvertido de hostelería a programación', initials: 'JR' },
        { quote: 'Tras 5 años fuera del mercado laboral, el programa de reincorporación me dio la confianza y las herramientas para volver a trabajar.', name: 'Carmen Ortiz', role: 'Reincorporada al mercado laboral tras 5 años', initials: 'CO' }
      ] %}
      {% set items = testimonials|default(default_testimonials) %}
      {% for testimonial in items %}
        <div class="pb-section__testimonial">
          <p class="pb-section__testimonial-quote">{{ testimonial.quote|default('Gran experiencia.')|t }}</p>
          <div class="pb-section__testimonial-author">
            <div class="pb-section__testimonial-avatar">
              {% if testimonial.avatar|default('') %}
                <img src="{{ testimonial.avatar }}" alt="{{ testimonial.name|default('') }}" loading="lazy" />
              {% else %}
                {{ testimonial.initials|default('??') }}
              {% endif %}
            </div>
            <div>
              <div class="pb-section__testimonial-name">{{ testimonial.name|default('Candidato')|t }}</div>
              <div class="pb-section__testimonial-role">{{ testimonial.role|default('Profesional')|t }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
