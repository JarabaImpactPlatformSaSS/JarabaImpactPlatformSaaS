{#
 # Template: Empleabilidad - Servicios de Empleo
 # Category: empleabilidad
 # Type: features
 #
 # Header centrado + grid de 3 feature cards (icono + título + descripción)
 #}
<section class="pb-section pb-section--features pb-section--empleabilidad"
         aria-label="{{ title|default('Nuestros Servicios')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Servicios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Todo lo que necesitas para encontrar empleo')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Herramientas y acompañamiento profesional para impulsar tu carrera.')|t }}</p>
    </div>
    <div class="pb-section__features-grid">
      {% set default_features = [
        { icon: '&#127891;', title: 'Formación certificada', desc: 'Cursos y talleres con certificación oficial para mejorar tu empleabilidad.' },
        { icon: '&#128269;', title: 'Bolsa de empleo', desc: 'Accede a ofertas laborales actualizadas y postula directamente desde tu perfil.' },
        { icon: '&#129309;', title: 'Orientación laboral', desc: 'Asesores profesionales te guían para encontrar el camino profesional ideal.' }
      ] %}
      {% set items = features|default(default_features) %}
      {% for feature in items %}
        <div class="pb-section__feature-card">
          {# AUDIT-SEC-02: |raw needed for HTML entities (emoji icons). Input is admin-configured, low risk. #}
          <div class="pb-section__feature-icon" aria-hidden="true">{{ feature.icon|default('&#9733;')|striptags|raw }}</div>
          <h3 class="pb-section__feature-title">{{ feature.title|default('Característica')|t }}</h3>
          <p class="pb-section__feature-desc">{{ feature.desc|default('Descripción de la característica.')|t }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
