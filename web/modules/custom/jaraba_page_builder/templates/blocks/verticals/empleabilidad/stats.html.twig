{#
 # Template: Empleabilidad - Métricas de Colocación
 # Category: empleabilidad
 # Type: stats
 #
 # Header + fila de 4 stat counters (número grande + label)
 #}
<section class="pb-section pb-section--stats pb-section--empleabilidad"
         data-block-type="empleabilidad_stats"
         aria-label="{{ title|default('Nuestras Cifras')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Resultados que transforman vidas')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Cifras que reflejan nuestro compromiso con la inserción laboral.')|t }}</p>
    </div>
    <div class="pb-section__stats-row">
      {% set default_stats = [
        { number: '+3.500', label: 'Candidatos formados' },
        { number: '72%', label: 'Tasa de inserción' },
        { number: '+800', label: 'Empresas colaboradoras' },
        { number: '150+', label: 'Cursos disponibles' }
      ] %}
      {% set items = stats|default(default_stats) %}
      {% for stat in items %}
        <div class="pb-section__stat">
          <span class="pb-section__stat-number">{{ stat.number|default('0') }}</span>
          <span class="pb-section__stat-label">{{ stat.label|default('Métrica')|t }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
