{#
 # Template: Empleabilidad - Desarrollo Profesional
 # Category: empleabilidad
 # Type: content
 #
 # Grid 2 columnas: texto + media
 #}
<section class="pb-section pb-section--content pb-section--empleabilidad"
         aria-label="{{ title|default('Formación Profesional')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__text">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Formación')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Desarrolla las habilidades que el mercado demanda')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Programas de upskilling y reskilling diseñados para que te adaptes a las necesidades del mercado laboral actual.')|t }}</p>
      {% if description %}
        <div class="pb-section__description">{{ description|safe_html }}</div>
      {% else %}
        <div class="pb-section__description">{{ 'Desde competencias digitales hasta habilidades interpersonales, nuestros programas formativos te preparan para acceder a las oportunidades laborales con mayor demanda.'|t }}</div>
      {% endif %}
      {% if cta_text and cta_url %}
        <div class="pb-section__actions">
          <a href="{{ cta_url }}" class="pb-section__cta pb-section__cta--primary">{{ cta_text }}</a>
        </div>
      {% endif %}
    </div>
    <div class="pb-section__media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">&#128218;</div>
      {% endif %}
    </div>
  </div>
</section>
