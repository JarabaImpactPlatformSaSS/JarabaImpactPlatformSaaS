{#
 # Template: Empleabilidad - Centro de Formación
 # Category: empleabilidad
 # Type: map
 #
 # Grid 2 cols: mapa embed + info de contacto lateral
 #}
<section class="pb-section pb-section--map pb-section--empleabilidad"
         aria-label="{{ title|default('Encuéntranos')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__map-embed">
      {% if map_embed|default('') %}
        {{ map_embed|raw }}
      {% else %}
        <span>{{ 'Mapa de ubicación — inserta tu código de mapa aquí'|t }}</span>
      {% endif %}
    </div>
    <div class="pb-section__contact-info">
      <h2 class="pb-section__title">{{ title|default('Visítanos')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Estamos aquí para ayudarte en tu desarrollo profesional.')|t }}</p>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">&#128205;</div>
        <div>
          <div class="pb-section__contact-label">{{ 'Dirección'|t }}</div>
          <div class="pb-section__contact-value">{{ address|default('Centro de Formación, Calle del Trabajo 15, Tu Ciudad')|t }}</div>
        </div>
      </div>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">&#128222;</div>
        <div>
          <div class="pb-section__contact-label">{{ 'Teléfono'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="tel:{{ phone|default('+34 600 000 000') }}">{{ phone|default('+34 600 000 000') }}</a>
          </div>
        </div>
      </div>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">&#9993;</div>
        <div>
          <div class="pb-section__contact-label">{{ 'Email'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="mailto:{{ email|default('info@tuformacion.com') }}">{{ email|default('info@tuformacion.com') }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
