{#
 # Template: Empleabilidad - Empresas Aliadas
 # Category: empleabilidad
 # Type: social_proof
 #
 # Header "Confían en nosotros" + grid de logos con hover
 #}
<section class="pb-section pb-section--social-proof pb-section--empleabilidad"
         data-block-type="empleabilidad_social_proof"
         aria-label="{{ title|default('Empresas que contratan a nuestros candidatos')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Empresas que contratan a nuestros candidatos')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Organizaciones que confían en nuestro talento formado para cubrir sus vacantes.')|t }}</p>
    </div>
    <div class="pb-section__logos-grid">
      {% set default_logos = [
        { alt: 'Empresa colaboradora 1' },
        { alt: 'Empresa colaboradora 2' },
        { alt: 'Empresa colaboradora 3' },
        { alt: 'Empresa colaboradora 4' },
        { alt: 'Empresa colaboradora 5' },
        { alt: 'Empresa colaboradora 6' }
      ] %}
      {% set items = logos|default(default_logos) %}
      {% for logo in items %}
        <div class="pb-section__logo">
          {% if logo.src|default('') %}
            <img src="{{ logo.src }}" alt="{{ logo.alt|default('Logo') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__logo-placeholder">{{ logo.alt|default('Logo')|t }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
