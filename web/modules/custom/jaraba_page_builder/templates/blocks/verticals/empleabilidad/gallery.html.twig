{#
 # Template: Empleabilidad - Galería de Formación
 # Category: empleabilidad
 # Type: gallery
 #
 # Header + grid responsive de imágenes con hover overlay
 #}
<section class="pb-section pb-section--gallery pb-section--empleabilidad"
         data-block-type="empleabilidad_gallery"
         aria-label="{{ title|default('Galería de Formación')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Galería')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Nuestras actividades formativas')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Talleres, jornadas y eventos que conectan talento con oportunidades.')|t }}</p>
    </div>
    <div class="pb-section__gallery-grid">
      {% set default_gallery = [
        { alt: 'Taller de competencias digitales', caption: 'Taller de competencias digitales' },
        { alt: 'Jornada de networking empresarial', caption: 'Networking empresarial' },
        { alt: 'Curso de preparación de entrevistas', caption: 'Preparación de entrevistas' },
        { alt: 'Sesión de orientación laboral', caption: 'Orientación laboral' },
        { alt: 'Feria de empleo y formación', caption: 'Feria de empleo' },
        { alt: 'Taller de desarrollo profesional', caption: 'Desarrollo profesional' }
      ] %}
      {% set items = gallery|default(default_gallery) %}
      {% for item in items %}
        <figure class="pb-section__gallery-item">
          {% if item.src|default('') %}
            <img src="{{ item.src }}" alt="{{ item.alt|default('Imagen') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__img-placeholder" aria-hidden="true">
              {{ jaraba_icon('ui', 'graduation-cap', { variant: 'duotone', size: '48px', color: 'primary' }) }}
            </div>
          {% endif %}
          {% if item.caption|default('') %}
            <figcaption>{{ item.caption|t }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    </div>
  </div>
</section>
