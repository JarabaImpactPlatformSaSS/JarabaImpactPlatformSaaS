{#
 # Template: Empleabilidad - Perfil del Candidato
 # Category: empleabilidad
 # Type: hero
 #
 # Split layout: hero content (eyebrow + h2 + subtitle + CTAs) + media
 #}
<section class="pb-section pb-section--hero pb-section--empleabilidad"
         data-block-type="empleabilidad_hero"
         aria-label="{{ title|default('Tu Carrera Profesional')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__hero-content">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Empleabilidad')|t }}</span>
      <h1 class="pb-section__title">{{ title|default('Impulsa tu carrera profesional')|t }}</h1>
      <p class="pb-section__subtitle">{{ subtitle|default('Formación, orientación y oportunidades laborales para construir el futuro que mereces.')|t }}</p>
      <div class="pb-section__actions">
        <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
          {{ cta_text|default('Ver ofertas')|t }}
        </a>
        {% if cta_secondary_text is defined %}
          <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
            {{ cta_secondary_text }}
          </a>
        {% else %}
          <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Crear mi perfil'|t }}</a>
        {% endif %}
      </div>
    </div>
    <div class="pb-section__media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">
          {{ jaraba_icon('ui', 'graduation-cap', { variant: 'duotone', size: '48px', color: 'azul-corporativo' }) }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
