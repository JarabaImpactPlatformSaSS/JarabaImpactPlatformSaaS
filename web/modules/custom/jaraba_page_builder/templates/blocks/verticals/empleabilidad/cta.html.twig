{#
 # Template: Empleabilidad - Llamada a la Acción
 # Category: empleabilidad
 # Type: cta
 #
 # Banner con gradient, título, subtitle y 2 CTAs (primary + secondary)
 #}
<section class="pb-section pb-section--cta pb-section--empleabilidad"
         data-block-type="empleabilidad_cta"
         aria-label="{{ title|default('Da el siguiente paso')|t }}">
  <div class="pb-section__container">
    <h2 class="pb-section__title">{{ title|default('¿Listo para dar el siguiente paso en tu carrera?')|t }}</h2>
    <p class="pb-section__subtitle">{{ subtitle|default('Miles de profesionales ya han transformado su futuro laboral. Únete y accede a formación, ofertas y orientación personalizada.')|t }}</p>
    <div class="pb-section__actions">
      <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
        {{ cta_text|default('Empezar ahora')|t }}
      </a>
      {% if cta_secondary_text is defined %}
        <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
          {{ cta_secondary_text }}
        </a>
      {% else %}
        <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Ver formaciones'|t }}</a>
      {% endif %}
    </div>
  </div>
</section>
