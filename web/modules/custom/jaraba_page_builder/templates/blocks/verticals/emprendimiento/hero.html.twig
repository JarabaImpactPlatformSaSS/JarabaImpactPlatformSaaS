{#
 # Template: Emprendimiento - Lanzamiento Startup
 # Category: emprendimiento
 # Type: hero
 #
 # Split layout: hero content (eyebrow + h2 + subtitle + CTAs) + media
 #}
<section class="pb-section pb-section--hero pb-section--emprendimiento"
         aria-label="{{ title|default('Lanza tu Startup')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__hero-content">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Emprendimiento')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Convierte tu idea en un negocio real')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Mentores, financiaci√≥n y herramientas para lanzar y escalar tu proyecto emprendedor.')|t }}</p>
      <div class="pb-section__actions">
        <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
          {{ cta_text|default('Empezar mi proyecto')|t }}
        </a>
        {% if cta_secondary_text is defined %}
          <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
            {{ cta_secondary_text }}
          </a>
        {% else %}
          <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Ver programas'|t }}</a>
        {% endif %}
      </div>
    </div>
    <div class="pb-section__media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">&#128640;</div>
      {% endif %}
    </div>
  </div>
</section>
