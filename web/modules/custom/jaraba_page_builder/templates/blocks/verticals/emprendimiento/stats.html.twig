{#
 # Template: Emprendimiento - Métricas del Ecosistema
 # Category: emprendimiento
 # Type: stats
 #
 # Header + fila de 4 stat counters (número grande + label)
 #}
<section class="pb-section pb-section--stats pb-section--emprendimiento"
         data-block-type="emprendimiento_stats"
         aria-label="{{ title|default('Nuestro Impacto')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Resultados de nuestro ecosistema emprendedor')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Cifras que respaldan nuestro compromiso con el emprendimiento.')|t }}</p>
    </div>
    <div class="pb-section__stats-row">
      {% set default_stats = [
        { number: '+200', label: 'Startups lanzadas' },
        { number: '5M€', label: 'Financiación captada' },
        { number: '85%', label: 'Supervivencia 3 años' },
        { number: '+50', label: 'Mentores activos' }
      ] %}
      {% set items = stats|default(default_stats) %}
      {% for stat in items %}
        <div class="pb-section__stat">
          <span class="pb-section__stat-number">{{ stat.number|default('0') }}</span>
          <span class="pb-section__stat-label">{{ stat.label|default('Métrica')|t }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
