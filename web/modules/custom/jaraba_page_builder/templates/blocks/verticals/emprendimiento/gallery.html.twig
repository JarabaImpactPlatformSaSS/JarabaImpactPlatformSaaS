{#
 # Template: Emprendimiento - Galería del Ecosistema
 # Category: emprendimiento
 # Type: gallery
 #
 # Header + grid responsive de imágenes con hover overlay
 #}
<section class="pb-section pb-section--gallery pb-section--emprendimiento"
         data-block-type="emprendimiento_gallery"
         aria-label="{{ title|default('Nuestro Ecosistema')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Galería')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Donde nacen las startups')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Descubre nuestros espacios, eventos y la comunidad que impulsa el emprendimiento.')|t }}</p>
    </div>
    <div class="pb-section__gallery-grid">
      {% set default_gallery = [
        { alt: 'Evento de startups', caption: 'Startup Weekend' },
        { alt: 'Demo Day', caption: 'Demo Day de primavera' },
        { alt: 'Espacio coworking', caption: 'Nuestro coworking' },
        { alt: 'Sesión de mentoría', caption: 'Mentoría grupal' },
        { alt: 'Networking', caption: 'Encuentro de inversores' },
        { alt: 'Taller de innovación', caption: 'Taller de design thinking' }
      ] %}
      {% set items = gallery|default(default_gallery) %}
      {% for item in items %}
        <figure class="pb-section__gallery-item">
          {% if item.src|default('') %}
            <img src="{{ item.src }}" alt="{{ item.alt|default('Imagen') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__img-placeholder" aria-hidden="true">
              {{ jaraba_icon('ui', 'rocket', { variant: 'duotone', size: '48px', color: 'primary' }) }}
            </div>
          {% endif %}
          {% if item.caption|default('') %}
            <figcaption>{{ item.caption|t }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    </div>
  </div>
</section>
