{#
 # Template: Emprendimiento - Llamada a la Acción
 # Category: emprendimiento
 # Type: cta
 #
 # Banner con gradient, título, subtitle y 2 CTAs (primary + secondary)
 #}
<section class="pb-section pb-section--cta pb-section--emprendimiento"
         data-block-type="emprendimiento_cta"
         aria-label="{{ title|default('Presenta tu idea')|t }}">
  <div class="pb-section__container">
    <h2 class="pb-section__title">{{ title|default('¿Tienes una idea? Nosotros la hacemos crecer')|t }}</h2>
    <p class="pb-section__subtitle">{{ subtitle|default('Únete a nuestro ecosistema emprendedor y transforma tu visión en una startup de éxito. Sin compromiso, sin letra pequeña.')|t }}</p>
    <div class="pb-section__actions">
      <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
        {{ cta_text|default('Presentar mi idea')|t }}
      </a>
      {% if cta_secondary_text is defined %}
        <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
          {{ cta_secondary_text }}
        </a>
      {% else %}
        <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Conocer el programa'|t }}</a>
      {% endif %}
    </div>
  </div>
</section>
