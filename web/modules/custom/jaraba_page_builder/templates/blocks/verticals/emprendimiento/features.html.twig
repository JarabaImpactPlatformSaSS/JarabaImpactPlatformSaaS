{#
 # Template: Emprendimiento - Servicios para Startups
 # Category: emprendimiento
 # Type: features
 #
 # Header centrado + grid de 3 feature cards (icono + título + descripción)
 #}
<section class="pb-section pb-section--features pb-section--emprendimiento"
         data-block-type="emprendimiento_features"
         aria-label="{{ title|default('Nuestros Servicios')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Servicios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Todo lo que necesitas para emprender')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Recursos y herramientas diseñados para cada etapa de tu proyecto emprendedor.')|t }}</p>
    </div>
    <div class="pb-section__features-grid">
      {% set default_features = [
        { icon: 'lightbulb', icon_category: 'ui', title: 'Validación de ideas', desc: 'Metodologías probadas para validar tu modelo de negocio antes de invertir.' },
        { icon: 'euro', icon_category: 'analytics', title: 'Acceso a financiación', desc: 'Conecta con inversores, fondos y programas de ayudas para emprendedores.' },
        { icon: 'handshake', icon_category: 'business', title: 'Red de mentores', desc: 'Emprendedores experimentados te guían en cada etapa de tu proyecto.' }
      ] %}
      {% set items = features|default(default_features) %}
      {% for feature in items %}
        <div class="pb-section__feature-card">
          <div class="pb-section__feature-icon" aria-hidden="true">
            {{ jaraba_icon(feature.icon_category|default('ui'), feature.icon|default('star'), { variant: 'duotone', size: '32px' }) }}
          </div>
          <h3 class="pb-section__feature-title">{{ feature.title|default('Característica')|t }}</h3>
          <p class="pb-section__feature-desc">{{ feature.desc|default('Descripción de la característica.')|t }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
