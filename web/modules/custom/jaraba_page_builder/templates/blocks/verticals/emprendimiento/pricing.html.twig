{#
 # Template: Emprendimiento - Programas de Aceleración
 # Category: emprendimiento
 # Type: pricing
 #
 # Header + 3 pricing cards con precio, features list y CTA
 #}
<section class="pb-section pb-section--pricing pb-section--emprendimiento"
         aria-label="{{ title|default('Nuestros Programas')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Programas')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Elige el programa que impulse tu startup')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Programas adaptados a cada fase de tu proyecto emprendedor.')|t }}</p>
    </div>
    <div class="pb-section__pricing-grid">
      {% set default_plans = [
        { name: 'Ideación', price: 'Gratuito', period: '', featured: false, cta: 'Comenzar gratis', features: ['Business Model Canvas', 'Plantilla de pitch deck', 'Comunidad de emprendedores', 'Talleres introductorios'] },
        { name: 'Aceleración', price: '149€', period: '/mes', featured: true, badge: 'Más elegido', cta: 'Unirme al programa', features: ['Mentor asignado', 'Espacio coworking', 'Asesoría legal básica', 'Soporte contable', 'Acceso a eventos de networking'] },
        { name: 'Scale-up', price: '299€', period: '/mes', featured: false, cta: 'Solicitar plaza', features: ['Todo en Aceleración', 'Acceso a red de inversores', 'Equipo de growth dedicado', 'Expansión internacional', 'Demo days exclusivos'] }
      ] %}
      {% set items = plans|default(default_plans) %}
      {% for plan in items %}
        <div class="pb-section__pricing-card{{ plan.featured|default(false) ? ' pb-section__pricing-card--featured' : '' }}">
          {% if plan.badge|default('') %}
            <span class="pb-section__pricing-badge">{{ plan.badge|t }}</span>
          {% endif %}
          <h3 class="pb-section__pricing-name">{{ plan.name|default('Plan')|t }}</h3>
          <div class="pb-section__pricing-price">{{ plan.price|default('0€') }}</div>
          <div class="pb-section__pricing-period">{{ plan.period|default('/mes')|t }}</div>
          <ul class="pb-section__pricing-features">
            {% for feature in plan.features|default([]) %}
              <li>{{ feature|t }}</li>
            {% endfor %}
          </ul>
          <a href="{{ plan.url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
            {{ plan.cta|default('Elegir programa')|t }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
