{#
 # Template: Emprendimiento - Partners y Aceleradoras
 # Category: emprendimiento
 # Type: social_proof
 #
 # Header "Confían en nosotros" + grid de logos con hover
 #}
<section class="pb-section pb-section--social-proof pb-section--emprendimiento"
         aria-label="{{ title|default('Confían en nosotros')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Partners y aceleradoras que nos acompañan')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Organizaciones e inversores que forman parte de nuestro ecosistema emprendedor.')|t }}</p>
    </div>
    <div class="pb-section__logos-grid">
      {% set default_logos = [
        { alt: 'Aceleradora 1' },
        { alt: 'Fondo inversión 2' },
        { alt: 'Universidad partner 3' },
        { alt: 'Incubadora 4' },
        { alt: 'Corporate partner 5' },
        { alt: 'Aceleradora 6' }
      ] %}
      {% set items = logos|default(default_logos) %}
      {% for logo in items %}
        <div class="pb-section__logo">
          {% if logo.src|default('') %}
            <img src="{{ logo.src }}" alt="{{ logo.alt|default('Logo') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__logo-placeholder">{{ logo.alt|default('Logo')|t }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
