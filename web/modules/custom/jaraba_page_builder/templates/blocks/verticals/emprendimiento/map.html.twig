{#
 # Template: Emprendimiento - Hub de Emprendimiento
 # Category: emprendimiento
 # Type: map
 #
 # Grid 2 cols: mapa embed + info de contacto lateral
 #}
<section class="pb-section pb-section--map pb-section--emprendimiento"
         data-block-type="emprendimiento_map"
         aria-label="{{ title|default('Encuéntranos')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__map-embed">
      {% if map_embed|default('') %}
        {{ map_embed|striptags('<iframe>')|raw }}
      {% else %}
        <span>{{ 'Mapa de ubicación — inserta tu código de mapa aquí'|t }}</span>
      {% endif %}
    </div>
    <div class="pb-section__contact-info">
      <h2 class="pb-section__title">{{ title|default('Visítanos')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Ven a conocer nuestro hub de emprendimiento.')|t }}</p>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">
            {{ jaraba_icon('ui', 'map-pin', { variant: 'duotone', size: '24px' }) }}
          </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Dirección'|t }}</div>
          <div class="pb-section__contact-value">{{ address|default('Hub de Emprendimiento, Plaza Innovación 3, Tu Ciudad')|t }}</div>
        </div>
      </div>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">
            {{ jaraba_icon('ui', 'phone', { variant: 'duotone', size: '24px' }) }}
          </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Teléfono'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="tel:{{ phone|default('+34 600 000 000') }}">{{ phone|default('+34 600 000 000') }}</a>
          </div>
        </div>
      </div>
      <div class="pb-section__contact-item">
        <div class="pb-section__contact-icon" aria-hidden="true">
            {{ jaraba_icon('ui', 'envelope', { variant: 'duotone', size: '24px' }) }}
          </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Email'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="mailto:{{ email|default('info@tuhub.com') }}">{{ email|default('info@tuhub.com') }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
