{#
 # Template: AgroConecta - Certificación y Origen
 # Category: agroconecta
 # Type: content
 #
 # Grid 2 columnas: texto + media
 # Premium: entrance animation, configurable layout direction, background image on media, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 # - layout: 'left' (default) or 'right' to toggle text/media position
 #}
<section class="pb-section pb-section--content pb-section--content--{{ layout|default('left') }} pb-section--agroconecta jaraba-block jaraba-block--premium"
         aria-label="{{ title|default('Nuestro Origen')|t }}"
         data-effect="fade-up">
  <div class="pb-section__container">
    <div class="pb-section__text">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Origen')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Trazabilidad completa desde la semilla')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Cada producto cuenta una historia: del campo donde creció al momento en que llega a tu hogar.')|t }}</p>
      {% if description %}
        <div class="pb-section__description">{{ description|safe_html }}</div>
      {% else %}
        <div class="pb-section__description">{{ 'Nuestros productores siguen prácticas agrícolas sostenibles, garantizando productos frescos con certificación de origen y calidad.'|t }}</div>
      {% endif %}
      {% if cta_text and cta_url %}
        <div class="pb-section__actions">
          <a href="{{ cta_url }}" class="pb-section__cta pb-section__cta--primary">{{ cta_text }}</a>
        </div>
      {% endif %}
    </div>
    <div class="pb-section__media"
         {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %}>
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">
          {{ jaraba_icon('ui', 'seedling', { variant: 'duotone', size: '48px', color: 'primary' }) }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
