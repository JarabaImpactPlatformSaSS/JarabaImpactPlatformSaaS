{#
 # Template: AgroConecta - Escaparate del Productor
 # Category: agroconecta
 # Type: hero
 #
 # Split layout: hero content (eyebrow + h2 + subtitle + CTAs) + media
 #}
<section class="pb-section pb-section--hero pb-section--agroconecta"
         aria-label="{{ title|default('Escaparate del Productor')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__hero-content">
      <span class="pb-section__eyebrow">{{ eyebrow|default('AgroConecta')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Del campo a tu mesa, sin intermediarios')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Conecta directamente con productores locales y accede a productos frescos, org√°nicos y de temporada.')|t }}</p>
      <div class="pb-section__actions">
        <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
          {{ cta_text|default('Ver productos')|t }}
        </a>
        {% if cta_secondary_text is defined %}
          <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
            {{ cta_secondary_text }}
          </a>
        {% else %}
          <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Conocer productores'|t }}</a>
        {% endif %}
      </div>
    </div>
    <div class="pb-section__media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">&#127793;</div>
      {% endif %}
    </div>
  </div>
</section>
