{#
 # Template: ServiciosConecta - Presentacion Profesional
 # Category: serviciosconecta
 # Type: hero
 #
 # Split layout: hero content (eyebrow + h2 + subtitle + CTAs) + media
 # Premium: animations, parallax media, background image, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--hero pb-section--serviciosconecta jaraba-block jaraba-block--premium"
         data-block-type="serviciosconecta_hero"
         aria-label="{{ title|default('Presentacion Profesional')|t }}"
         data-effect="fade-up"
         {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %}>
  <div class="pb-section__container">
    <div class="pb-section__hero-content">
      <span class="pb-section__eyebrow">{{ eyebrow|default('ServiciosConecta')|t }}</span>
      <h1 class="pb-section__title">{{ title|default('Profesionales verificados a tu alcance')|t }}</h1>
      <p class="pb-section__subtitle">{{ subtitle|default('Encuentra expertos en asesoría, consultoría y servicios profesionales con referencias verificadas.')|t }}</p>
      <div class="pb-section__actions">
        <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
          {{ cta_text|default('Buscar profesional')|t }}
        </a>
        {% if cta_secondary_text is defined %}
          <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
            {{ cta_secondary_text }}
          </a>
        {% else %}
          <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Soy profesional'|t }}</a>
        {% endif %}
      </div>
    </div>
    <div class="pb-section__media" data-parallax="0.3">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">
          {{ jaraba_icon('legal', 'briefcase', { variant: 'duotone', size: '48px', color: 'azul-corporativo' }) }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
