{#
 # Template: ServiciosConecta - Llamada a la Accion
 # Category: serviciosconecta
 # Type: cta
 #
 # Banner con gradient, titulo, subtitle y 2 CTAs (primary + secondary)
 #}
<section class="pb-section pb-section--cta pb-section--serviciosconecta"
         aria-label="{{ title|default('Solicitar Presupuesto')|t }}">
  <div class="pb-section__container">
    <h2 class="pb-section__title">{{ title|default('¿Necesitas un profesional de confianza?')|t }}</h2>
    <p class="pb-section__subtitle">{{ subtitle|default('Conecta con expertos verificados en consultoría, asesoría legal, contabilidad y más. Solicita presupuesto sin compromiso.')|t }}</p>
    <div class="pb-section__actions">
      <a href="{{ cta_url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
        {{ cta_text|default('Solicitar presupuesto')|t }}
      </a>
      {% if cta_secondary_text is defined %}
        <a href="{{ cta_secondary_url|default('#') }}" class="pb-section__cta pb-section__cta--secondary">
          {{ cta_secondary_text }}
        </a>
      {% else %}
        <a href="#" class="pb-section__cta pb-section__cta--secondary">{{ 'Ver categorías'|t }}</a>
      {% endif %}
    </div>
  </div>
</section>
