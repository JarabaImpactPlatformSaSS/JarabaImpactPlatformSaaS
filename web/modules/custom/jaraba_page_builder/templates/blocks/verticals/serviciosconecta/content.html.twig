{#
 # Template: ServiciosConecta - Expertise y Trayectoria
 # Category: serviciosconecta
 # Type: content
 #
 # Grid 2 columnas: texto + media
 # Premium: animations, parallax media, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--content pb-section--serviciosconecta jaraba-block jaraba-block--premium"
         data-block-type="serviciosconecta_content"
         aria-label="{{ title|default('Servicios de Confianza')|t }}"
         data-effect="fade-up">
  <div class="pb-section__container">
    <div class="pb-section__text">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Servicios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Servicios profesionales de confianza')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Accede a una red de profesionales verificados en consultoría, asesoría legal, contabilidad y más.')|t }}</p>
      {% if description %}
        <div class="pb-section__description">{{ description|safe_html }}</div>
      {% else %}
        <div class="pb-section__description">{{ 'Garantizamos la calidad de cada profesional. Todos pasan por un riguroso proceso de verificación de credenciales, experiencia y referencias antes de formar parte de nuestra plataforma.'|t }}</div>
      {% endif %}
      {% if cta_text and cta_url %}
        <div class="pb-section__actions">
          <a href="{{ cta_url }}" class="pb-section__cta pb-section__cta--primary">{{ cta_text }}</a>
        </div>
      {% endif %}
    </div>
    <div class="pb-section__media" data-parallax="0.3">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('')|striptags }}" loading="lazy" />
      {% else %}
        <div class="pb-section__img-placeholder" aria-hidden="true">
          {{ jaraba_icon('legal', 'briefcase', { variant: 'duotone', size: '48px', color: 'azul-corporativo' }) }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
