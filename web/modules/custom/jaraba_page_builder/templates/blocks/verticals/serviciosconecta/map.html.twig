{#
 # Template: ServiciosConecta - Areas de Cobertura
 # Category: serviciosconecta
 # Type: map
 #
 # Grid 2 cols: mapa embed + info de contacto lateral
 # Premium: animations, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--map pb-section--serviciosconecta jaraba-block jaraba-block--premium"
         aria-label="{{ title|default('Nuestras Oficinas')|t }}"
         data-effect="fade-up">
  <div class="pb-section__container">
    <div class="pb-section__map-embed">
      {% if map_embed|default('') %}
        {{ map_embed|striptags('<iframe>')|raw }}
      {% else %}
        <span>{{ 'Mapa de ubicación — inserta tu código de mapa aquí'|t }}</span>
      {% endif %}
    </div>
    <div class="pb-section__contact-info">
      <h2 class="pb-section__title">{{ title|default('Visita nuestro despacho')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Estamos aquí para asesorarte.')|t }}</p>
      <div class="pb-section__contact-item" data-effect="fade-up" data-delay="100">
        <div class="pb-section__contact-icon" aria-hidden="true">
          {{ jaraba_icon('ui', 'pin', { variant: 'duotone', size: '24px', color: 'primary' }) }}
        </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Dirección'|t }}</div>
          <div class="pb-section__contact-value">{{ address|default('Av. de la Constitución 10, Tu Ciudad')|t }}</div>
        </div>
      </div>
      <div class="pb-section__contact-item" data-effect="fade-up" data-delay="200">
        <div class="pb-section__contact-icon" aria-hidden="true">
          {{ jaraba_icon('ui', 'phone', { variant: 'duotone', size: '24px', color: 'primary' }) }}
        </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Teléfono'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="tel:{{ phone|default('+34 600 000 000') }}">{{ phone|default('+34 600 000 000') }}</a>
          </div>
        </div>
      </div>
      <div class="pb-section__contact-item" data-effect="fade-up" data-delay="300">
        <div class="pb-section__contact-icon" aria-hidden="true">
          {{ jaraba_icon('ui', 'mail', { variant: 'duotone', size: '24px', color: 'primary' }) }}
        </div>
        <div>
          <div class="pb-section__contact-label">{{ 'Email'|t }}</div>
          <div class="pb-section__contact-value">
            <a href="mailto:{{ email|default('info@tudespacho.com') }}">{{ email|default('info@tudespacho.com') }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
