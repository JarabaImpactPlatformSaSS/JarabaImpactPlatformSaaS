{#
 # Template: ServiciosConecta - Paquetes de Servicio
 # Category: serviciosconecta
 # Type: pricing
 #
 # Header + 3 pricing cards con precio, features list y CTA
 #}
<section class="pb-section pb-section--pricing pb-section--serviciosconecta"
         aria-label="{{ title|default('Paquetes de Servicio')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Tarifas')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Elige el plan que mejor se adapte a tus necesidades')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Opciones flexibles para particulares y empresas.')|t }}</p>
    </div>
    <div class="pb-section__pricing-grid">
      {% set default_plans = [
        { name: 'Consulta', price: '45€', period: '/sesión', featured: false, cta: 'Reservar consulta', features: ['Sesión de 60 minutos', 'Diagnóstico inicial', 'Informe básico', 'Soporte por email'] },
        { name: 'Plan Profesional', price: '120€', period: '/mes', featured: true, badge: 'Recomendado', cta: 'Contratar plan', features: ['Consultas ilimitadas', 'Profesional asignado', 'Seguimiento mensual', 'Informes detallados', 'Soporte prioritario'] },
        { name: 'Premium', price: '250€', period: '/mes', featured: false, cta: 'Contactar', features: ['Todo en Profesional', 'Equipo multidisciplinar', 'Auditorías trimestrales', 'Gestor de cuenta dedicado', 'SLA garantizado'] }
      ] %}
      {% set items = plans|default(default_plans) %}
      {% for plan in items %}
        <div class="pb-section__pricing-card{{ plan.featured|default(false) ? ' pb-section__pricing-card--featured' : '' }}">
          {% if plan.badge|default('') %}
            <span class="pb-section__pricing-badge">{{ plan.badge|t }}</span>
          {% endif %}
          <h3 class="pb-section__pricing-name">{{ plan.name|default('Plan')|t }}</h3>
          <div class="pb-section__pricing-price">{{ plan.price|default('0€') }}</div>
          <div class="pb-section__pricing-period">{{ plan.period|default('/mes')|t }}</div>
          <ul class="pb-section__pricing-features">
            {% for feature in plan.features|default([]) %}
              <li>{{ feature|t }}</li>
            {% endfor %}
          </ul>
          <a href="{{ plan.url|default('#') }}" class="pb-section__cta pb-section__cta--primary">
            {{ plan.cta|default('Elegir plan')|t }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
