{#
 # Template: ServiciosConecta - Portafolio de Proyectos
 # Category: serviciosconecta
 # Type: gallery
 #
 # Header + grid responsive de imagenes con hover overlay
 # Premium: staggered animations, jaraba_icon system
 # - Usa jaraba_icon(category, name, { variant, size, color }) para iconos
 #}
<section class="pb-section pb-section--gallery pb-section--serviciosconecta jaraba-block jaraba-block--premium"
         aria-label="{{ title|default('Portafolio de Proyectos')|t }}"
         data-effect="fade-up">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Portafolio')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Proyectos destacados de nuestros profesionales')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Conoce el trabajo y los resultados de los expertos en nuestra plataforma.')|t }}</p>
    </div>
    <div class="pb-section__gallery-grid">
      {% set default_gallery = [
        { alt: 'Consultoría estratégica', caption: 'Consultoría estratégica' },
        { alt: 'Asesoría legal', caption: 'Asesoría legal' },
        { alt: 'Gestión contable', caption: 'Gestión contable' },
        { alt: 'Planificación fiscal', caption: 'Planificación fiscal' },
        { alt: 'Auditoría empresarial', caption: 'Auditoría empresarial' },
        { alt: 'Coaching ejecutivo', caption: 'Coaching ejecutivo' }
      ] %}
      {% set items = gallery|default(default_gallery) %}
      {% for item in items %}
        <figure class="pb-section__gallery-item"
                data-effect="fade-up"
                data-delay="{{ loop.index0 * 100 }}">
          {% if item.src|default('') %}
            <img src="{{ item.src }}" alt="{{ item.alt|default('Imagen') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__img-placeholder" aria-hidden="true">
              {{ jaraba_icon('business', 'briefcase', { variant: 'duotone', size: '32px', color: 'primary' }) }}
            </div>
          {% endif %}
          {% if item.caption|default('') %}
            <figcaption>{{ item.caption|t }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    </div>
  </div>
</section>
