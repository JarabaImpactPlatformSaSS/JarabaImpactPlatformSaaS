{#
 # Template: ServiciosConecta - Acreditaciones
 # Category: serviciosconecta
 # Type: social_proof
 #
 # Header "Confian en nosotros" + grid de logos con hover
 #}
<section class="pb-section pb-section--social-proof pb-section--serviciosconecta"
         aria-label="{{ title|default('Empresas que confian en nosotros')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <h2 class="pb-section__title">{{ title|default('Empresas que contratan nuestros profesionales')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Organizaciones que conf√≠an en ServiciosConecta para encontrar talento profesional.')|t }}</p>
    </div>
    <div class="pb-section__logos-grid">
      {% set default_logos = [
        { alt: 'Empresa cliente 1' },
        { alt: 'Empresa cliente 2' },
        { alt: 'Empresa cliente 3' },
        { alt: 'Despacho asociado 4' },
        { alt: 'Despacho asociado 5' },
        { alt: 'Despacho asociado 6' }
      ] %}
      {% set items = logos|default(default_logos) %}
      {% for logo in items %}
        <div class="pb-section__logo">
          {% if logo.src|default('') %}
            <img src="{{ logo.src }}" alt="{{ logo.alt|default('Logo') }}" loading="lazy" />
          {% else %}
            <div class="pb-section__logo-placeholder">{{ logo.alt|default('Logo')|t }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
