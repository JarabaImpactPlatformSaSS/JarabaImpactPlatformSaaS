{#
 # Template: ServiciosConecta - Metricas de Experiencia
 # Category: serviciosconecta
 # Type: stats
 #
 # Header + fila de 4 stat counters (numero grande + label)
 # Premium: animated counters, entrance animation, prefix/suffix support
 # - data-counter on number elements triggers count-up animation
 # - data-counter-duration controls animation speed (ms)
 #}
<section class="pb-section pb-section--stats pb-section--serviciosconecta jaraba-block jaraba-block--premium"
         data-block-type="serviciosconecta_stats"
         aria-label="{{ title|default('Nuestras Cifras')|t }}"
         data-effect="fade-up"
         data-counter-duration="2000"
         {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %}>
  <div class="pb-section__container">
    <div class="pb-section__header">
      <div class="pb-section__header-icon" aria-hidden="true">
        {{ jaraba_icon('finance', 'chart-bar', { variant: 'duotone', size: '48px', color: 'azul-corporativo' }) }}
      </div>
      <span class="pb-section__eyebrow">{{ eyebrow|default('Resultados')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Resultados que avalan nuestra plataforma')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Cifras que demuestran la confianza de clientes y profesionales en ServiciosConecta.')|t }}</p>
    </div>
    <div class="pb-section__stats-row">
      {% set default_stats = [
        { number: '+1.200', label: 'Profesionales activos' },
        { number: '98%', label: 'Clientes satisfechos' },
        { number: '+25K', label: 'Servicios completados' },
        { number: '4.9', label: 'Valoración media' }
      ] %}
      {% set items = stats|default(default_stats) %}
      {% for stat in items %}
        <div class="pb-section__stat"
             data-effect="fade-up"
             data-delay="{{ loop.index0 * 100 }}">
          <span class="pb-section__stat-number">
            {{ stat.prefix|default('') }}<span data-counter="{{ stat.number|default('0') }}" data-target="{{ stat.number|default('0')|replace({'+': '', '.': '', 'K': '000', 'k': '000'}) }}">0</span>{{ stat.suffix|default('') }}
          </span>
          <span class="pb-section__stat-label">{{ stat.label|default('Métrica')|t }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
