{#
 # Template: ServiciosConecta - Casos de Exito
 # Category: serviciosconecta
 # Type: testimonials
 #
 # Header + grid de 3 quote cards con comilla decorativa, avatar, nombre/cargo
 #}
<section class="pb-section pb-section--testimonials pb-section--serviciosconecta"
         aria-label="{{ title|default('Casos de Exito')|t }}">
  <div class="pb-section__container">
    <div class="pb-section__header">
      <span class="pb-section__eyebrow">{{ eyebrow|default('Testimonios')|t }}</span>
      <h2 class="pb-section__title">{{ title|default('Lo que dicen nuestros clientes')|t }}</h2>
      <p class="pb-section__subtitle">{{ subtitle|default('Empresas y particulares que han encontrado al profesional ideal en ServiciosConecta.')|t }}</p>
    </div>
    <div class="pb-section__testimonials-grid">
      {% set default_testimonials = [
        { quote: 'Encontré un asesor fiscal excelente en menos de 48 horas. El proceso de verificación me dio total confianza para contratar sus servicios.', name: 'Elena Vázquez', role: 'Directora, Startup TechVida', initials: 'EV' },
        { quote: 'Los presupuestos claros y las valoraciones de otros clientes me ayudaron a elegir al consultor perfecto para reestructurar mi negocio.', name: 'Roberto Sánchez', role: 'Propietario, Distribuciones RS', initials: 'RS' },
        { quote: 'Gracias a ServiciosConecta contamos con un equipo legal de primer nivel. La plataforma simplifica todo el proceso de contratación.', name: 'Laura Fernández', role: 'CEO, Grupo Innova', initials: 'LF' }
      ] %}
      {% set items = testimonials|default(default_testimonials) %}
      {% for testimonial in items %}
        <div class="pb-section__testimonial">
          <p class="pb-section__testimonial-quote">{{ testimonial.quote|default('Gran experiencia.')|t }}</p>
          <div class="pb-section__testimonial-author">
            <div class="pb-section__testimonial-avatar">
              {% if testimonial.avatar|default('') %}
                <img src="{{ testimonial.avatar }}" alt="{{ testimonial.name|default('') }}" loading="lazy" />
              {% else %}
                {{ testimonial.initials|default('??') }}
              {% endif %}
            </div>
            <div>
              <div class="pb-section__testimonial-name">{{ testimonial.name|default('Cliente')|t }}</div>
              <div class="pb-section__testimonial-role">{{ testimonial.role|default('Profesional')|t }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
