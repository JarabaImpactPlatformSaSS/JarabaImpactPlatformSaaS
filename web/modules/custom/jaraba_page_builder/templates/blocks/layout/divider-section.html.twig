{% set style = content.style|default('line') %}
{% set width = content.width|default('medium') %}
{% set spacing = content.spacing|default('medium') %}
{% set color = content.color|default('light') %}

<div class="jaraba-divider jaraba-divider--{{ style }} jaraba-divider--{{ width }} jaraba-divider--spacing-{{ spacing }} jaraba-divider--{{ color }}"
     data-block-type="layout_divider_section">
  {% if style == 'wave' %}
    <svg class="jaraba-divider__wave" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
    </svg>
  {% else %}
    <hr class="jaraba-divider__line">
  {% endif %}
</div>
