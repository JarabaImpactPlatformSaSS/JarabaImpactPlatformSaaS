{#
/**
 * @file
 * Template for gamification profile page.
 */
#}

<div class="gamification-profile">
  <div class="profile-header">
    <h2 class="profile-title">{{ jaraba_icon('ui', 'gamepad', { variant: 'duotone', color: 'secondary', size: '24px' }) }} {{ 'Mi Progreso'|t }}</h2>
  </div>

  {# Level Card #}
  <div class="level-card">
    <div class="level-badge-large">
      <span class="level-number">{{ progress.current_level }}</span>
    </div>
    <div class="level-info">
      <h3 class="level-name">{{ progress.level_name }}</h3>
      <p class="xp-total">{{ progress.total_xp }} XP {{ 'totales'|t }}</p>
    </div>
  </div>

  {# Progress Bar #}
  <div class="progress-section">
    <div class="progress-header">
      <span>{{ 'Progreso hacia'|t }} {{ progress.next_level_name }}</span>
      <span class="progress-percent">{{ progress.progress_percent }}%</span>
    </div>
    <div class="progress-bar-container">
      <div class="progress-bar-fill" style="width: {{ progress.progress_percent }}%"></div>
    </div>
    <p class="progress-detail">
      {{ progress.xp_in_level }} / {{ progress.xp_for_next }} XP
    </p>
  </div>

  {# Stats Grid #}
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">{{ jaraba_icon('ui', 'fire', { variant: 'duotone', color: 'danger', size: '24px' }) }}</div>
      <div class="stat-value">{{ stats.streak_days }}</div>
      <div class="stat-label">{{ 'Días de racha'|t }}</div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">{{ jaraba_icon('ui', 'trophy', { variant: 'duotone', color: 'warning', size: '24px' }) }}</div>
      <div class="stat-value">{{ stats.longest_streak }}</div>
      <div class="stat-label">{{ 'Racha récord'|t }}</div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">{{ jaraba_icon('ui', 'star', { variant: 'duotone', color: 'warning', size: '24px' }) }}</div>
      <div class="stat-value">{{ progress.total_xp }}</div>
      <div class="stat-label">{{ 'XP Total'|t }}</div>
    </div>
  </div>

  {# Actions #}
  <div class="profile-actions">
    <a href="/leaderboard" class="action-btn">
      <span class="action-icon">{{ jaraba_icon('ui', 'medal', { size: '16px' }) }}</span>
      <span>{{ 'Ver Ranking'|t }}</span>
    </a>
    <a href="/my-learning" class="action-btn action-btn--primary">
      <span class="action-icon">{{ jaraba_icon('ui', 'book', { size: '16px' }) }}</span>
      <span>{{ 'Seguir Aprendiendo'|t }}</span>
    </a>
  </div>
</div>

