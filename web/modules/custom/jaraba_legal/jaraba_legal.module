    'legal_dashboard' => [
      'variables' => [
        'tos_status' => NULL,
        'sla_metrics' => NULL,
        'aup_violations' => NULL,
        'offboarding_requests' => NULL,
        'whistleblower_stats' => NULL,
        'usage_limits' => NULL,
        'metrics' => NULL,
      ],
      'template' => 'legal-dashboard',
