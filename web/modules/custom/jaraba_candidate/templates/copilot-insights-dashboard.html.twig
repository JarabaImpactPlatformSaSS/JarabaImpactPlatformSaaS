  padding: 20px;
  display: flex;
  align-items: center;
  gap: 16px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  border: 1px solid rgba(255,255,255,0.5);
}

.kpi-icon {
  font-size: 32px;
}

.kpi-value {
  display: block;
  font-size: 28px;
  font-weight: 700;
  color: #1f2937;
}

.kpi-label {
  font-size: 13px;
  color: #6b7280;
}

.insights-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 24px;
}

.insights-card {
  background: #fff;
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.06);
  border: 1px solid #e5e7eb;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 16px;
}

.card-subtitle {
  font-size: 13px;
  color: #6b7280;
  margin: -12px 0 16px;
}

.topics-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.topic-item {
  display: grid;
  grid-template-columns: 120px 1fr 40px;
  align-items: center;
  gap: 12px;
}

.topic-name {
  font-size: 13px;
  font-weight: 500;
  color: #374151;
}

.topic-bar {
  height: 8px;
  background: #e5e7eb;
  border-radius: 4px;
  overflow: hidden;
}

.topic-fill {
  height: 100%;
