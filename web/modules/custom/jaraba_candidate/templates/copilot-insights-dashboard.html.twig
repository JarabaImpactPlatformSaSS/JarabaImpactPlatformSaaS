  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.question-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
  padding: 10px;
  background: #f9fafb;
  border-radius: 8px;
}

.question-text {
  font-size: 13px;
  color: #374151;
  flex: 1;
}

.question-badge {
  background: #0ea5e9;
  color: white;
  font-size: 11px;
  font-weight: 600;
  padding: 2px 8px;
  border-radius: 12px;
}

.gaps-list {
  list-style: none;
  padding: 0;
  margin: 0;
