{#
/**
 * @file
 * Template for Copilot Insights Dashboard.
 *
 * Variables:
 * - metrics: Effectiveness metrics (total, resolved, rate, rating, tokens, cost)
 * - topics: Array of topics with count
 * - popular_questions: Array of popular questions
 * - unresolved_queries: Array of unresolved conversations
 */
#}

<div class="copilot-insights-dashboard">
  {# === Header KPIs === #}
  <div class="insights-header">
    <h2 class="insights-title">{{ jaraba_icon('analytics', 'gauge', { color: 'azul-corporativo', size: '24px' }) }} {{ 'Análisis de Copilotos IA'|t }}</h2>
    <p class="insights-subtitle">{{ 'Última semana • Datos actualizados cada 5 min'|t }}</p>
  </div>

  <div class="insights-kpis">
    <div class="kpi-card kpi-conversations">
      <span class="kpi-icon">{{ jaraba_icon('ui', 'message', { variant: 'duotone', color: 'corporate', size: '32px' }) }}</span>
      <div class="kpi-content">
        <span class="kpi-value">{{ metrics.total_conversations }}</span>
        <span class="kpi-label">{{ 'Conversaciones'|t }}</span>
      </div>
    </div>

    <div class="kpi-card kpi-resolution">
      <span class="kpi-icon">{{ jaraba_icon('actions', 'check', { color: 'success', size: '32px' }) }}</span>
      <div class="kpi-content">
        <span class="kpi-value">{{ metrics.resolution_rate }}%</span>
        <span class="kpi-label">{{ 'Tasa Resolución'|t }}</span>
      </div>
    </div>

    <div class="kpi-card kpi-rating">
      <span class="kpi-icon">{{ jaraba_icon('business', 'achievement', { color: 'naranja-impulso', size: '32px' }) }}</span>
      <div class="kpi-content">
        <span class="kpi-value">{{ metrics.average_rating ?: 'N/A' }}</span>
        <span class="kpi-label">{{ 'Rating Promedio'|t }}</span>
      </div>
    </div>

    <div class="kpi-card kpi-cost">
      <span class="kpi-icon">{{ jaraba_icon('analytics', 'euro', { variant: 'duotone', color: 'success', size: '32px' }) }}</span>
      <div class="kpi-content">
        <span class="kpi-value">${{ metrics.total_cost_usd }}</span>
        <span class="kpi-label">{{ 'Costo Total'|t }}</span>
      </div>
    </div>
  </div>

  {# === Main Content Grid === #}
  <div class="insights-grid">
    
    {# === Topics Chart === #}
    <div class="insights-card topics-card">
      <h3 class="card-title">{{ jaraba_icon('business', 'target', { color: 'naranja-impulso', size: '20px' }) }} {{ 'Intents Más Frecuentes'|t }}</h3>
      <div class="topics-list">
        {% for topic in topics %}
          <div class="topic-item">
            <span class="topic-name">{{ topic.intent|replace({'_': ' '})|capitalize }}</span>
            <div class="topic-bar">
              <div class="topic-fill" style="width: {{ (topic.count / (topics[0].count ?: 1)) * 100 }}%"></div>
            </div>
            <span class="topic-count">{{ topic.count }}</span>
          </div>
        {% else %}
          <p class="empty-state">{{ 'No hay datos suficientes'|t }}</p>
        {% endfor %}
      </div>
    </div>

    {# === Popular Questions === #}
    <div class="insights-card questions-card">
      <h3 class="card-title">{{ jaraba_icon('ui', 'question', { size: '20px' }) }} {{ 'Preguntas Más Comunes'|t }}</h3>
      <ul class="questions-list">
        {% for question in popular_questions %}
          <li class="question-item">
            <span class="question-text">{{ question.sample|length > 80 ? question.sample|slice(0, 80) ~ '...' : question.sample }}</span>
            <span class="question-badge">{{ question.count }}x</span>
          </li>
        {% else %}
          <li class="empty-state">{{ 'Sin datos todavía'|t }}</li>
        {% endfor %}
      </ul>
    </div>

    {# === Unresolved Queries (Gaps) === #}
    <div class="insights-card gaps-card">
      <h3 class="card-title">{{ jaraba_icon('ui', 'alert-triangle', { color: 'warning', size: '20px' }) }} {{ 'Consultas Sin Resolver'|t }}</h3>
      <p class="card-subtitle">{{ 'Posibles gaps en la base de conocimiento'|t }}</p>
      <ul class="gaps-list">
        {% for query in unresolved_queries %}
          <li class="gap-item">
            <div class="gap-header">
              <span class="gap-type">{{ query.copilot_type|replace({'_': ' '})|capitalize }}</span>
              <span class="gap-date">{{ query.date }}</span>
            </div>
            <span class="gap-question">{{ query.question|length > 100 ? query.question|slice(0, 100) ~ '...' : query.question }}</span>
            <span class="gap-intent-badge">{{ query.intent }}</span>
          </li>
        {% else %}
          <li class="success-state">{{ jaraba_icon('ui', 'party', { size: '16px' }) }} {{ '¡Todas las consultas fueron resueltas!'|t }}</li>
        {% endfor %}
      </ul>
    </div>

    {# === Token Usage === #}
    <div class="insights-card tokens-card">
      <h3 class="card-title">{{ jaraba_icon('analytics', 'hash', { size: '20px' }) }} {{ 'Uso de Tokens'|t }}</h3>
      <div class="tokens-stats">
        <div class="token-stat">
          <span class="token-label">{{ 'Input'|t }}</span>
          <span class="token-value">{{ metrics.total_tokens_input|number_format }}</span>
        </div>
        <div class="token-stat">
          <span class="token-label">{{ 'Output'|t }}</span>
          <span class="token-value">{{ metrics.total_tokens_output|number_format }}</span>
        </div>
      </div>
      <div class="cost-breakdown">
        <p>{{ 'Modelo: @model'|t({'@model': 'Claude 3.5 Sonnet'}) }}</p>
        <p>{{ 'Costo estimado:'|t }} <strong>${{ metrics.total_cost_usd }}</strong></p>
      </div>
    </div>

  </div>

</div>

<style>
