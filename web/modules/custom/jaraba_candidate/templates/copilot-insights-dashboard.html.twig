  text-transform: uppercase;
}

.gap-date {
  font-size: 11px;
  color: #6b7280;
}

.gap-question {
  display: block;
  font-size: 13px;
  color: #374151;
  margin-bottom: 8px;
}

.gap-intent-badge {
  display: inline-block;
  background: #fef3c7;
  color: #92400e;
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 10px;
}

.tokens-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 16px;
}

.token-stat {
  text-align: center;
  padding: 16px;
  background: #f3f4f6;
  border-radius: 12px;
}

