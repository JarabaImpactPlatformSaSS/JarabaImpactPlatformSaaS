  margin-bottom: 4px;
}

.token-value {
  font-size: 20px;
  font-weight: 700;
  color: #1f2937;
}

.cost-breakdown {
  padding: 12px;
  background: linear-gradient(135deg, rgba(5, 150, 105, 0.08) 0%, rgba(16, 185, 129, 0.08) 100%);
  border-radius: 8px;
}

.cost-breakdown p {
  margin: 4px 0;
  font-size: 13px;
  color: #065f46;
}

.empty-state, .success-state {
  padding: 20px;
  text-align: center;
  color: #6b7280;
  font-style: italic;
}

.success-state {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
  border-radius: 8px;
  color: #065f46;
}
</style>
