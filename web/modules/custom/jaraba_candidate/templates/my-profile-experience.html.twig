{#
/**
 * @file
 * Template for My Profile - Experience management section.
 *
 * Supports slide-panel AJAX loading from profile completeness ring.
 *
 * Variables:
 *   - experiences: Array of experience records with id, job_title,
 *                  company_name, description, location, start_date,
 *                  end_date, is_current.
 */
#}

<div class="my-profile-experience">
  <div class="experience-header">
    <div class="experience-header__text">
      <h2>{% trans %}Experiencia Laboral{% endtrans %}</h2>
      <p class="experience-description">
        {% trans %}Añade tu experiencia profesional para fortalecer tu perfil y mejorar tu visibilidad ante reclutadores.{% endtrans %}
      </p>
    </div>
    <button type="button" class="section-add-btn"
            data-slide-panel="quick-action"
            data-slide-panel-url="/my-profile/section/candidate_experience/add"
            data-slide-panel-title="{% trans %}Añadir experiencia{% endtrans %}">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M12 5v14M5 12h14"/></svg>
      {% trans %}Añadir{% endtrans %}
    </button>
  </div>

  <div class="current-items">
    <h3>{% trans %}Experiencia registrada{% endtrans %} <span class="badge">{{ experiences|length }}</span></h3>

    {% if experiences is not empty %}
      <div class="item-list">
        {% for exp in experiences %}
          <div class="item-card" data-entity-id="{{ exp.id }}">
            <div class="item-card__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
                <path d="M16 7V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v2"/>
              </svg>
            </div>
            <div class="item-card__info">
              <span class="item-card__title">{{ exp.job_title }}</span>
              <span class="item-card__subtitle">{{ exp.company_name }}</span>
              {% if exp.location %}
                <span class="item-card__meta">{{ exp.location }}</span>
              {% endif %}
              <span class="item-card__dates">
                {% if exp.start_date %}
                  {{ exp.start_date|date('m/Y') }}
                {% endif %}
                –
                {% if exp.is_current %}
                  {% trans %}Actualidad{% endtrans %}
                {% elseif exp.end_date %}
                  {{ exp.end_date|date('m/Y') }}
                {% endif %}
              </span>
              {% if exp.description %}
                <p class="item-card__desc">{{ exp.description|length > 150 ? exp.description|slice(0, 150) ~ '…' : exp.description }}</p>
              {% endif %}
            </div>
            <div class="item-card__actions">
              <button type="button" class="item-card__edit"
                      data-slide-panel="quick-action"
                      data-slide-panel-url="/my-profile/section/candidate_experience/{{ exp.id }}/edit"
                      data-slide-panel-title="{% trans %}Editar experiencia{% endtrans %}"
                      title="{% trans %}Editar{% endtrans %}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
              </button>
              <button type="button" class="item-card__delete"
                      data-section-delete="/my-profile/section/candidate_experience/{{ exp.id }}/delete"
                      title="{% trans %}Eliminar{% endtrans %}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"/>
                  <path d="M19 6l-1 14a2 2 0 01-2 2H8a2 2 0 01-2-2L5 6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                </svg>
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-state">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" opacity="0.35">
          <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
          <path d="M16 7V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v2"/>
        </svg>
        <p>{% trans %}Aún no has registrado experiencia laboral.{% endtrans %}</p>
        <p class="empty-state__hint">{% trans %}Añadir tu experiencia aumenta significativamente tu visibilidad ante los reclutadores.{% endtrans %}</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
.my-profile-experience {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
}

.experience-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 2rem;
}

.experience-header h2 {
  margin: 0 0 0.5rem;
  font-size: 1.75rem;
  font-family: var(--ej-font-headings, 'Outfit', sans-serif);
  color: var(--ej-color-headings, #1a202c);
}

.experience-description {
  color: var(--ej-color-muted, #64748b);
  line-height: 1.5;
  margin: 0;
}

.section-add-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.5rem 1rem;
  background: var(--ej-color-primary, #FF8C42);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  white-space: nowrap;
  transition: background 0.2s, transform 0.15s;
}

.section-add-btn:hover {
  background: var(--ej-color-primary-dark, #e67a30);
  transform: translateY(-1px);
}

.current-items h3 {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 1rem;
  font-family: var(--ej-font-headings, 'Outfit', sans-serif);
}

.current-items .badge {
  background: var(--ej-color-impulse, #FF8C42);
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 999px;
  font-size: 0.875rem;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.item-card {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.25rem;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04), 0 1px 2px rgba(0, 0, 0, 0.02);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.item-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
}

.item-card__icon {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: rgba(255, 140, 66, 0.1);
  color: var(--ej-color-impulse, #FF8C42);
}

.item-card__info {
  display: flex;
  flex-direction: column;
  gap: 2px;
  min-width: 0;
  flex: 1;
}

.item-card__title {
  font-weight: 600;
  font-size: 1rem;
  color: var(--ej-color-headings, #1a202c);
}

.item-card__subtitle {
  font-size: 0.9375rem;
  color: var(--ej-color-corporate, #233D63);
}

.item-card__meta,
.item-card__dates {
  font-size: 0.8125rem;
  color: var(--ej-color-muted, #64748b);
}

.item-card__desc {
  font-size: 0.8125rem;
  color: var(--ej-color-muted, #64748b);
  line-height: 1.4;
  margin: 4px 0 0;
}

.item-card__actions {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  flex-shrink: 0;
}

.item-card__edit,
.item-card__delete {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s;
  background: transparent;
}

.item-card__edit {
  color: var(--ej-color-corporate, #233D63);
}

.item-card__edit:hover {
  background: rgba(35, 61, 99, 0.1);
}

.item-card__delete {
  color: var(--ej-color-danger, #EF4444);
}

.item-card__delete:hover {
  background: rgba(239, 68, 68, 0.1);
}

.empty-state {
  text-align: center;
  padding: 2.5rem 2rem;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
  border: 1px dashed var(--ej-border-color, #e2e8f0);
  border-radius: 12px;
}

.empty-state svg {
  margin-bottom: 1rem;
  color: var(--ej-color-impulse, #FF8C42);
}

.empty-state p {
  margin: 0 0 0.5rem;
  color: var(--ej-color-headings, #1a202c);
  font-weight: 500;
}

.empty-state__hint {
  color: var(--ej-color-muted, #64748b) !important;
  font-weight: 400 !important;
  font-size: 0.875rem;
}
</style>
