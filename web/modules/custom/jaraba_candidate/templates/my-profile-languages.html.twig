{#
/**
 * @file
 * Template for My Profile - Languages management section.
 *
 * Supports slide-panel AJAX loading from profile completeness ring.
 *
 * Variables:
 *   - languages: Array of language records with id, language_name,
 *                proficiency_level (CEFR A1-C2), is_native, certification.
 */
#}

{% set level_labels = {
  'A1': 'A1 — Principiante',
  'A2': 'A2 — Elemental',
  'B1': 'B1 — Intermedio',
  'B2': 'B2 — Intermedio Alto',
  'C1': 'C1 — Avanzado',
  'C2': 'C2 — Maestría',
} %}

<div class="my-profile-languages">
  <div class="languages-header">
    <div class="languages-header__text">
      <h2>{% trans %}Idiomas{% endtrans %}</h2>
      <p class="languages-description">
        {% trans %}Indica los idiomas que dominas y tu nivel de competencia para ampliar tus oportunidades profesionales.{% endtrans %}
      </p>
    </div>
    <button type="button" class="section-add-btn"
            data-slide-panel="quick-action"
            data-slide-panel-url="/my-profile/section/candidate_language/add"
            data-slide-panel-title="{% trans %}Añadir idioma{% endtrans %}">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M12 5v14M5 12h14"/></svg>
      {% trans %}Añadir{% endtrans %}
    </button>
  </div>

  <div class="current-items">
    <h3>{% trans %}Idiomas registrados{% endtrans %} <span class="badge">{{ languages|length }}</span></h3>

    {% if languages is not empty %}
      <div class="item-list">
        {% for lang in languages %}
          <div class="item-card" data-entity-id="{{ lang.id }}">
            <div class="item-card__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
              </svg>
            </div>
            <div class="item-card__info">
              <span class="item-card__title">{{ lang.language_name }}</span>
              <div class="item-card__badges">
                <span class="level-badge level-badge--{{ lang.proficiency_level|lower }}">
                  {{ level_labels[lang.proficiency_level] ?? lang.proficiency_level }}
                </span>
                {% if lang.is_native %}
                  <span class="native-badge">{% trans %}Nativo{% endtrans %}</span>
                {% endif %}
              </div>
              {% if lang.certification %}
                <span class="item-card__meta">{{ lang.certification }}</span>
              {% endif %}
            </div>
            <div class="item-card__actions">
              <button type="button" class="item-card__edit"
                      data-slide-panel="quick-action"
                      data-slide-panel-url="/my-profile/section/candidate_language/{{ lang.id }}/edit"
                      data-slide-panel-title="{% trans %}Editar idioma{% endtrans %}"
                      title="{% trans %}Editar{% endtrans %}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
              </button>
              <button type="button" class="item-card__delete"
                      data-section-delete="/my-profile/section/candidate_language/{{ lang.id }}/delete"
                      title="{% trans %}Eliminar{% endtrans %}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"/>
                  <path d="M19 6l-1 14a2 2 0 01-2 2H8a2 2 0 01-2-2L5 6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                </svg>
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-state">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" opacity="0.35">
          <circle cx="12" cy="12" r="10"/>
          <line x1="2" y1="12" x2="22" y2="12"/>
          <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
        </svg>
        <p>{% trans %}Aún no has registrado ningún idioma.{% endtrans %}</p>
        <p class="empty-state__hint">{% trans %}Indicar tus idiomas amplía tus oportunidades en puestos internacionales.{% endtrans %}</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
.my-profile-languages {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
}

.languages-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 2rem;
}

.languages-header h2 {
  margin: 0 0 0.5rem;
  font-size: 1.75rem;
  font-family: var(--ej-font-headings, 'Outfit', sans-serif);
  color: var(--ej-color-headings, #1a202c);
}

.languages-description {
  color: var(--ej-color-muted, #64748b);
  line-height: 1.5;
  margin: 0;
}

.section-add-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.5rem 1rem;
  background: var(--ej-color-primary, #FF8C42);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  white-space: nowrap;
  transition: background 0.2s, transform 0.15s;
}

.section-add-btn:hover {
  background: var(--ej-color-primary-dark, #e67a30);
  transform: translateY(-1px);
}

.current-items h3 {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 1rem;
  font-family: var(--ej-font-headings, 'Outfit', sans-serif);
}

.current-items .badge {
  background: var(--ej-color-corporate, #233D63);
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 999px;
  font-size: 0.875rem;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.item-card {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.25rem;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04), 0 1px 2px rgba(0, 0, 0, 0.02);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.item-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
}

.item-card__icon {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: rgba(35, 61, 99, 0.1);
  color: var(--ej-color-corporate, #233D63);
}

.item-card__info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
  flex: 1;
}

.item-card__title {
  font-weight: 600;
  font-size: 1rem;
  color: var(--ej-color-headings, #1a202c);
}

.item-card__badges {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-top: 2px;
}

.level-badge {
  display: inline-block;
  padding: 0.2rem 0.6rem;
  border-radius: 999px;
  font-size: 0.75rem;
  font-weight: 600;
  background: rgba(35, 61, 99, 0.1);
  color: var(--ej-color-corporate, #233D63);
}

.level-badge--c1,
.level-badge--c2 {
  background: rgba(0, 169, 165, 0.15);
  color: var(--ej-color-innovation, #00A9A5);
}

.level-badge--b1,
.level-badge--b2 {
  background: rgba(255, 140, 66, 0.15);
  color: var(--ej-color-impulse, #FF8C42);
}

.native-badge {
  display: inline-block;
  padding: 0.2rem 0.6rem;
  border-radius: 999px;
  font-size: 0.75rem;
  font-weight: 600;
  background: rgba(0, 169, 165, 0.15);
  color: var(--ej-color-innovation, #00A9A5);
}

.item-card__meta {
  font-size: 0.8125rem;
  color: var(--ej-color-muted, #64748b);
}

.item-card__actions {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  flex-shrink: 0;
}

.item-card__edit,
.item-card__delete {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s;
  background: transparent;
}

.item-card__edit {
  color: var(--ej-color-corporate, #233D63);
}

.item-card__edit:hover {
  background: rgba(35, 61, 99, 0.1);
}

.item-card__delete {
  color: var(--ej-color-danger, #EF4444);
}

.item-card__delete:hover {
  background: rgba(239, 68, 68, 0.1);
}

.empty-state {
  text-align: center;
  padding: 2.5rem 2rem;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
  border: 1px dashed var(--ej-border-color, #e2e8f0);
  border-radius: 12px;
}

.empty-state svg {
  margin-bottom: 1rem;
  color: var(--ej-color-corporate, #233D63);
}

.empty-state p {
  margin: 0 0 0.5rem;
  color: var(--ej-color-headings, #1a202c);
  font-weight: 500;
}

.empty-state__hint {
  color: var(--ej-color-muted, #64748b) !important;
  font-weight: 400 !important;
  font-size: 0.875rem;
}
</style>
