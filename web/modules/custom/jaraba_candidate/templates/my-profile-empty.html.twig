{#
/**
 * @file
 * Premium empty state for /my-profile when no profile exists.
 *
 * Follows Andalucia +ei empty state pattern: glassmorphism card,
 * jaraba_icon duotone, benefit cards, motivational CTA.
 */
#}

<div class="cp-empty cp-animate-in" style="--cp-stagger: 0">
  <div class="cp-empty__card">

    <div class="cp-empty__icon">
      {{ jaraba_icon('ui', 'user', { variant: 'duotone', color: 'azul-corporativo', size: '64px' }) }}
    </div>

    <h2 class="cp-empty__title">{% trans %}Tu perfil profesional te espera{% endtrans %}</h2>
    <p class="cp-empty__desc">{% trans %}Crea tu perfil para destacar ante empleadores, recibir recomendaciones personalizadas y generar tu CV con un clic.{% endtrans %}</p>

    <a href="{{ path('jaraba_candidate.my_profile.edit') }}"
       class="cp-btn cp-btn--primary cp-btn--lg">
      {{ jaraba_icon('actions', 'rocket', { variant: 'duotone', size: '20px' }) }}
      {% trans %}Crear mi perfil{% endtrans %}
    </a>

    <div class="cp-empty__benefits">
      <div class="cp-empty__benefit cp-animate-in" style="--cp-stagger: 1">
        <span class="cp-empty__benefit-icon cp-empty__benefit-icon--impulse">
          {{ jaraba_icon('business', 'talent-search', { variant: 'duotone', size: '24px' }) }}
        </span>
        <div>
          <strong>{% trans %}Matching inteligente{% endtrans %}</strong>
          <p>{% trans %}Conectamos tu perfil con las ofertas que mejor encajan contigo.{% endtrans %}</p>
        </div>
      </div>

      <div class="cp-empty__benefit cp-animate-in" style="--cp-stagger: 2">
        <span class="cp-empty__benefit-icon cp-empty__benefit-icon--innovation">
          {{ jaraba_icon('business', 'cv-optimized', { variant: 'duotone', size: '24px' }) }}
        </span>
        <div>
          <strong>{% trans %}CV con un clic{% endtrans %}</strong>
          <p>{% trans %}Genera un CV profesional desde tu perfil en segundos.{% endtrans %}</p>
        </div>
      </div>

      <div class="cp-empty__benefit cp-animate-in" style="--cp-stagger: 3">
        <span class="cp-empty__benefit-icon cp-empty__benefit-icon--corporate">
          {{ jaraba_icon('business', 'journey', { variant: 'duotone', size: '24px' }) }}
        </span>
        <div>
          <strong>{% trans %}Recomendaciones personalizadas{% endtrans %}</strong>
          <p>{% trans %}Cursos y formaciones adaptados a tus objetivos profesionales.{% endtrans %}</p>
        </div>
      </div>
    </div>

  </div>
</div>
