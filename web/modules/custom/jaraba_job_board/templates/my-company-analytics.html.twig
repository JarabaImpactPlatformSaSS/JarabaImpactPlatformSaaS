{#
/**
 * @file
 * Template for My Company Analytics dashboard.
 * Shows employer's job posting statistics and performance.
 */
#}

<div class="my-company-analytics">
  {# Header #}
  <div class="analytics-header">
    <h2 class="analytics-title">{{ jaraba_icon('analytics', 'gauge', { variant: 'duotone', color: 'azul-corporativo', size: '28px' }) }} {{ 'Estadísticas de Mi Empresa'|t }}</h2>
    <p class="analytics-subtitle">{{ 'Rendimiento de tus ofertas de empleo'|t }}</p>
  </div>

  {# KPIs Grid #}
  <div class="analytics-kpis">
    <div class="kpi-card kpi-card--primary">
      <div class="kpi-icon">{{ jaraba_icon('verticals', 'briefcase', { color: 'azul-corporativo', size: '24px' }) }}</div>
      <div class="kpi-value">{{ stats.total_jobs }}</div>
      <div class="kpi-label">{{ 'Ofertas Totales'|t }}</div>
    </div>

    <div class="kpi-card kpi-card--success">
      <div class="kpi-icon">{{ jaraba_icon('actions', 'check', { color: 'success', size: '24px' }) }}</div>
      <div class="kpi-value">{{ stats.active_jobs }}</div>
      <div class="kpi-label">{{ 'Ofertas Activas'|t }}</div>
    </div>

    <div class="kpi-card kpi-card--info">
      <div class="kpi-icon">{{ jaraba_icon('actions', 'check', { color: 'azul-verdoso', size: '24px' }) }}</div>
      <div class="kpi-value">{{ stats.total_applications }}</div>
      <div class="kpi-label">{{ 'Candidaturas Recibidas'|t }}</div>
    </div>

    <div class="kpi-card kpi-card--warning">
      <div class="kpi-icon">{{ jaraba_icon('ui', 'eye', { color: 'naranja-impulso', size: '24px' }) }}</div>
      <div class="kpi-value">{{ stats.total_views }}</div>
      <div class="kpi-label">{{ 'Visualizaciones'|t }}</div>
    </div>

    <div class="kpi-card kpi-card--accent">
      <div class="kpi-icon">{{ jaraba_icon('analytics', 'chart-line', { color: 'verde-innovacion', size: '24px' }) }}</div>
      <div class="kpi-value">{{ stats.conversion_rate }}%</div>
      <div class="kpi-label">{{ 'Tasa de Conversión'|t }}</div>
    </div>
  </div>

  {# Jobs Performance Table #}
  {% if jobs|length > 0 %}
  <div class="analytics-section">
    <h3 class="section-title">{{ 'Rendimiento por Oferta'|t }}</h3>
    <div class="table-responsive">
      <table class="analytics-table">
        <thead>
          <tr>
            <th>{{ 'Oferta'|t }}</th>
            <th>{{ 'Estado'|t }}</th>
            <th class="text-center">{{ 'Visualizaciones'|t }}</th>
            <th class="text-center">{{ 'Candidaturas'|t }}</th>
            <th class="text-center">{{ 'Conversión'|t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for job in jobs %}
          <tr>
            <td>
              <a href="/employer/jobs/{{ job.id }}/applications" class="job-link">{{ job.title }}</a>
            </td>
            <td>
              <span class="status-badge status-badge--{{ job.status }}">
                {{ job.status == 'published' ? 'Activa'|t : (job.status == 'draft' ? 'Borrador'|t : 'Cerrada'|t) }}
              </span>
            </td>
            <td class="text-center">{{ job.views }}</td>
            <td class="text-center">{{ job.applications }}</td>
            <td class="text-center">
              {% set conversion = job.views > 0 ? ((job.applications / job.views) * 100)|round(1) : 0 %}
              {{ conversion }}%
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% else %}
  <div class="analytics-empty">
    <div class="empty-icon">{{ jaraba_icon('business', 'diagnostic', { variant: 'duotone', color: 'azul-corporativo', size: '48px' }) }}</div>
    <p class="empty-message">{{ 'No tienes ofertas de empleo todavía.'|t }}</p>
    <a href="/employer/jobs/add" class="btn btn--primary">
      {{ 'Publicar Primera Oferta'|t }}
    </a>
  </div>
  {% endif %}

  {# Quick Actions #}
  <div class="analytics-actions">
    <a href="/employer/jobs" class="action-btn">
      <span class="action-icon">{{ jaraba_icon('business', 'diagnostic', { size: '20px' }) }}</span>
      <span>{{ 'Gestionar Ofertas'|t }}</span>
    </a>
    <a href="/employer/applications" class="action-btn">
      <span class="action-icon">{{ jaraba_icon('ui', 'users', { size: '20px' }) }}</span>
      <span>{{ 'Ver Candidaturas'|t }}</span>
    </a>
    <a href="/employer/jobs/add" class="action-btn action-btn--primary">
      <span class="action-icon">{{ jaraba_icon('actions', 'plus', { size: '20px' }) }}</span>
      <span>{{ 'Nueva Oferta'|t }}</span>
    </a>
  </div>
</div>

<style>
