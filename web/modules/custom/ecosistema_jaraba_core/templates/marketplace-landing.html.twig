<div class="marketplace">
  
  {# Hero Section #}
  <section class="marketplace-hero">
    <div class="marketplace-hero__content">
      <h1 class="marketplace-hero__title">
        {{ 'Descubre productos Ãºnicos de productores locales'|t }}
      </h1>
      <p class="marketplace-hero__subtitle">
        {{ 'El marketplace que conecta consumidores con los mejores productores artesanales'|t }}
      </p>
      
      {# Barra de bÃºsqueda #}
      <form class="marketplace-search-form" action="{{ path('ecosistema_jaraba_core.marketplace.search') }}" method="get">
        <div class="marketplace-search-form__wrapper">
          <span class="marketplace-search-form__icon">{{ jaraba_icon('ui', 'search', { color: 'neutral', size: '20px' }) }}</span>
          <input 
            type="text" 
            name="q" 
            class="marketplace-search-form__input" 
            placeholder="{{ 'Buscar productos, tiendas...'|t }}"
            aria-label="{{ 'Buscar'|t }}"
          >
          <button type="submit" class="marketplace-search-form__btn">
            {{ 'Buscar'|t }}
          </button>
        </div>
      </form>
    </div>
    
    {# EstadÃ­sticas #}
    <div class="marketplace-stats">
      {% for stat in stats %}
      <div class="marketplace-stat">
        <span class="marketplace-stat__icon">{{ stat.icon }}</span>
        <span class="marketplace-stat__value">{{ stat.value }}</span>
        <span class="marketplace-stat__label">{{ stat.label }}</span>
      </div>
      {% endfor %}
    </div>
  </section>

  {# CategorÃ­as #}
  <section class="marketplace-categories">
    <h2 class="marketplace-section-title">{{ 'Explora por categorÃ­a'|t }}</h2>
    <div class="marketplace-categories__grid">
      {% for category in categories %}
      <a href="{{ path('ecosistema_jaraba_core.marketplace.search') }}?category={{ category.slug }}" class="marketplace-category-card">
        <span class="marketplace-category-card__icon">{{ category.icon }}</span>
        <span class="marketplace-category-card__name">{{ category.name }}</span>
        <span class="marketplace-category-card__count">{{ category.count }} {{ 'productos'|t }}</span>
      </a>
      {% endfor %}
    </div>
  </section>

  {# Productos Destacados #}
  <section class="marketplace-featured">
    <div class="marketplace-featured__header">
      <h2 class="marketplace-section-title">{{ 'Productos destacados'|t }}</h2>
      <a href="{{ path('ecosistema_jaraba_core.marketplace.search') }}" class="marketplace-view-all">
        {{ 'Ver todos'|t }} â†’
      </a>
    </div>
    
    <div class="marketplace-products-grid">
      {% for product in featured_products %}
      <article class="marketplace-product-card" itemscope itemtype="https://schema.org/Product">
        <a href="{{ product.url }}" class="marketplace-product-card__link">
          <div class="marketplace-product-card__image-wrapper">
            <img 
              src="{{ product.image }}" 
              alt="{{ product.title }}" 
              class="marketplace-product-card__image"
              loading="lazy"
              itemprop="image"
            >
            <span class="marketplace-product-card__tenant">{{ product.tenant }}</span>
          </div>
          <div class="marketplace-product-card__content">
            <h3 class="marketplace-product-card__title" itemprop="name">{{ product.title }}</h3>
            <div class="marketplace-product-card__footer">
              <span class="marketplace-product-card__price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span itemprop="price">{{ product.price }}</span>
              </span>
              <span class="marketplace-product-card__cta">{{ 'Ver mÃ¡s'|t }}</span>
            </div>
          </div>
        </a>
      </article>
      {% endfor %}
    </div>
  </section>

  {# Tiendas del Ecosistema #}
  <section class="marketplace-tenants">
    <h2 class="marketplace-section-title">{{ 'Tiendas del ecosistema'|t }}</h2>
    <p class="marketplace-section-subtitle">{{ 'Conoce a los productores que forman parte de nuestra comunidad'|t }}</p>
    
    <div class="marketplace-tenants__grid">
      {% for tenant in active_tenants %}
      <a href="{{ tenant.url }}" class="marketplace-tenant-card">
        <img src="{{ tenant.logo }}" alt="{{ tenant.name }}" class="marketplace-tenant-card__logo">
        <span class="marketplace-tenant-card__name">{{ tenant.name }}</span>
      </a>
      {% endfor %}
    </div>
    
    <div class="marketplace-tenants__cta">
      <a href="/user/register" class="marketplace-btn marketplace-btn--primary">
        {{ 'Â¿Quieres vender aquÃ­? Ãšnete al ecosistema'|t }} â†’
      </a>
    </div>
  </section>

  {# Banner de valor #}
  <section class="marketplace-value">
    <div class="marketplace-value__grid">
      <div class="marketplace-value-card">
        <span class="marketplace-value-card__icon">ðŸšš</span>
        <h3 class="marketplace-value-card__title">{{ 'EnvÃ­o directo'|t }}</h3>
        <p class="marketplace-value-card__text">{{ 'Del productor a tu puerta, sin intermediarios'|t }}</p>
      </div>
      <div class="marketplace-value-card">
        <span class="marketplace-value-card__icon">âœ“</span>
