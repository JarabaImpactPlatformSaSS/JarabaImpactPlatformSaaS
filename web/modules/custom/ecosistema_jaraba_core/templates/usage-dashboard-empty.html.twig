{#
/**
 * @file
 * usage-dashboard-empty.html.twig — Estado vacío del dashboard de uso.
 *
 * Variables:
 * - message: Mensaje descriptivo del estado vacío.
 */
#}

<div class="usage-dashboard-empty">
  <div class="usage-dashboard-empty__icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="var(--ej-color-primary, #233D63)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21.21 15.89A10 10 0 1 1 8 2.83"/>
      <path d="M22 12A10 10 0 0 0 12 2v10z"/>
    </svg>
  </div>
  <h2 class="usage-dashboard-empty__title">{% trans %}Sin datos de uso{% endtrans %}</h2>
  <p class="usage-dashboard-empty__message">{{ message }}</p>
  <a href="{{ path('ecosistema_jaraba_core.tenant_self_service.dashboard') }}" class="usage-dashboard-empty__action">
    {% trans %}Ir a Mi Dashboard{% endtrans %}
  </a>
</div>
