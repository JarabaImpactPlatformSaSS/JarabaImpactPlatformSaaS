{#
/**
 * @file
 * Template para la p√°gina de b√∫squeda del Marketplace.
 *
 * Variables:
 * - query: T√©rmino de b√∫squeda
 * - category: Categor√≠a filtrada
 * - products: Array de productos encontrados
 * - categories: Array de categor√≠as disponibles
 */
#}

<div class="marketplace-search">
  
  {# Header de b√∫squeda #}
  <header class="marketplace-search__header">
    <h1 class="marketplace-search__title">
      {% if query %}
        {{ 'Resultados para:'|t }} "{{ query }}"
      {% elseif category %}
        {{ 'Categor√≠a:'|t }} {{ category|capitalize }}
      {% else %}
        {{ 'Todos los productos'|t }}
      {% endif %}
    </h1>
    <p class="marketplace-search__count">
      {{ products|length }} {{ 'productos encontrados'|t }}
    </p>
  </header>

  <div class="marketplace-search__layout">
    
    {# Sidebar de filtros #}
    <aside class="marketplace-search__filters">
      <h3 class="marketplace-filters__title">{{ 'Categor√≠as'|t }}</h3>
      <ul class="marketplace-filters__list">
        <li>
          <a href="{{ path('ecosistema_jaraba_core.marketplace.search') }}" 
             class="marketplace-filter-link {{ not category ? 'active' : '' }}">
            {{ 'Todas'|t }}
          </a>
        </li>
        {% for cat in categories %}
        <li>
          <a href="{{ path('ecosistema_jaraba_core.marketplace.search') }}?category={{ cat.slug }}" 
             class="marketplace-filter-link {{ category == cat.slug ? 'active' : '' }}">
            {{ cat.icon }} {{ cat.name }}
            <span class="marketplace-filter-count">({{ cat.count }})</span>
          </a>
        </li>
        {% endfor %}
      </ul>
      
      <a href="{{ path('ecosistema_jaraba_core.marketplace.landing') }}" class="marketplace-back-link">
        ‚Üê {{ 'Volver al Marketplace'|t }}
      </a>
    </aside>

    {# Grid de productos #}
    <main class="marketplace-search__results">
      
      {# Barra de b√∫squeda #}
      <form class="marketplace-search-bar" action="{{ path('ecosistema_jaraba_core.marketplace.search') }}" method="get">
        <input 
          type="text" 
          name="q" 
          value="{{ query }}" 
          placeholder="{{ 'Buscar productos...'|t }}"
          class="marketplace-search-bar__input"
          id="marketplace-search-input"
        >
        {% if category %}
        <input type="hidden" name="category" value="{{ category }}">
        {% endif %}
        <button type="submit" class="marketplace-search-bar__btn">üîç</button>
        {% if query or category %}
        <a href="{{ path('ecosistema_jaraba_core.marketplace.search') }}" class="marketplace-search-bar__clear" title="{{ 'Limpiar filtros'|t }}">‚úï</a>
        {% endif %}
      </form>

      {% if products|length > 0 %}
      <div class="marketplace-products-grid">
        {% for product in products %}
        <article class="marketplace-product-card">
          <a href="{{ product.url }}" class="marketplace-product-card__link">
            <div class="marketplace-product-card__image-wrapper">
              <img 
                src="{{ product.image }}" 
                alt="{{ product.title }}" 
                class="marketplace-product-card__image"
                loading="lazy"
              >
              <span class="marketplace-product-card__tenant">{{ product.tenant }}</span>
            </div>
            <div class="marketplace-product-card__content">
              <h3 class="marketplace-product-card__title">{{ product.title }}</h3>
              <div class="marketplace-product-card__footer">
                <span class="marketplace-product-card__price">{{ product.price }}</span>
                <span class="marketplace-product-card__cta">{{ 'Ver m√°s'|t }}</span>
              </div>
            </div>
          </a>
        </article>
        {% endfor %}
      </div>
      {% else %}
      <div class="marketplace-no-results">
        <span class="marketplace-no-results__icon">üîç</span>
        <h2 class="marketplace-no-results__title">{{ 'No se encontraron productos'|t }}</h2>
        <p class="marketplace-no-results__text">
          {{ 'Intenta con otros t√©rminos de b√∫squeda o explora las categor√≠as'|t }}
        </p>
        <a href="{{ path('ecosistema_jaraba_core.marketplace.landing') }}" class="marketplace-btn marketplace-btn--primary">
          {{ 'Ver todos los productos'|t }}
        </a>
      </div>
      {% endif %}
      
    </main>
  </div>

</div>

<style>
.marketplace-search {
  font-family: var(--ej-font-family, 'Inter', sans-serif);
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

.marketplace-search__header {
  margin-bottom: 2rem;
}

.marketplace-search__title {
  font-size: 2rem;
  font-weight: 700;
  color: #1e293b;
  margin: 0 0 0.5rem;
}

.marketplace-search__count {
  color: #64748b;
  margin: 0;
}

.marketplace-search__layout {
  display: grid;
  grid-template-columns: 250px 1fr;
  gap: 2rem;
}

/* Filters Sidebar */
.marketplace-search__filters {
  background: #f8fafc;
  padding: 1.5rem;
  border-radius: 1rem;
  height: fit-content;
  position: sticky;
  top: 2rem;
}

.marketplace-filters__title {
  font-size: 1rem;
  font-weight: 600;
  color: #1e293b;
  margin: 0 0 1rem;
}

.marketplace-filters__list {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem;
}

.marketplace-filter-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  text-decoration: none;
  color: #475569;
  border-radius: 0.5rem;
  transition: all 0.2s;
}

.marketplace-filter-link:hover {
  background: white;
  color: #3b82f6;
}

.marketplace-filter-link.active {
  background: #3b82f6;
  color: white;
}

.marketplace-filter-count {
  margin-left: auto;
  font-size: 0.75rem;
  opacity: 0.7;
}

.marketplace-back-link {
  color: #3b82f6;
  text-decoration: none;
  font-size: 0.875rem;
}

/* Search Bar */
.marketplace-search-bar {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.marketplace-search-bar__input {
  flex: 1;
  padding: 0.75rem 1rem;
  border: 1px solid #e2e8f0;
  border-radius: 0.5rem;
  font-size: 1rem;
}

.marketplace-search-bar__btn {
  padding: 0.75rem 1rem;
  background: #3b82f6;
  color: white;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
}

.marketplace-search-bar__clear {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: #ef4444;
  color: white;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: bold;
  transition: background 0.2s;
}

.marketplace-search-bar__clear:hover {
  background: #dc2626;
}

/* Products Grid (heredado del landing) */
.marketplace-products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 1.5rem;
}

.marketplace-product-card {
  background: white;
  border-radius: 1rem;
  overflow: hidden;
  border: 1px solid #e2e8f0;
  transition: all 0.2s;
}

.marketplace-product-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
}

.marketplace-product-card__link {
  text-decoration: none;
  color: inherit;
}

.marketplace-product-card__image-wrapper {
  position: relative;
  aspect-ratio: 4/3;
  overflow: hidden;
}

.marketplace-product-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.marketplace-product-card__tenant {
  position: absolute;
  top: 0.75rem;
  left: 0.75rem;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 2rem;
  font-size: 0.75rem;
}

.marketplace-product-card__content {
  padding: 1rem;
}

.marketplace-product-card__title {
  font-size: 1rem;
  font-weight: 600;
  color: #1e293b;
  margin: 0 0 0.5rem;
}

.marketplace-product-card__footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.marketplace-product-card__price {
  font-size: 1.25rem;
  font-weight: 700;
  color: #16a34a;
}

.marketplace-product-card__cta {
  color: #3b82f6;
  font-size: 0.875rem;
}

/* No Results */
.marketplace-no-results {
  text-align: center;
  padding: 4rem 2rem;
}

.marketplace-no-results__icon {
  font-size: 4rem;
  display: block;
  margin-bottom: 1rem;
}

.marketplace-no-results__title {
  font-size: 1.5rem;
  color: #1e293b;
  margin: 0 0 0.5rem;
}

.marketplace-no-results__text {
  color: #64748b;
  margin: 0 0 1.5rem;
}

.marketplace-btn--primary {
  display: inline-flex;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: 500;
}

@media (max-width: 768px) {
  .marketplace-search__layout {
    grid-template-columns: 1fr;
  }
  
  .marketplace-search__filters {
    position: relative;
    top: 0;
  }
}
</style>
