{#
/**
 * @file
 * Template para el Dashboard Self-Service del Tenant.
 *
 * Este dashboard permite a los tenants ver sus propias m√©tricas
 * y gestionar su configuraci√≥n sin intervenci√≥n del administrador.
 *
 * Variables:
 * - tenant: Entidad del tenant actual
 * - metrics: Array de m√©tricas con 'value', 'label', 'description', 'trend', 'icon'
 * - subscription_info: Informaci√≥n de la suscripci√≥n (plan, status, trial_days)
 * - recent_activity: Array de actividad reciente
 */
#}

<div class="tenant-dashboard">
  
  {# Cabecera con nombre del tenant #}
  <header class="tenant-dashboard__header">
    <div class="tenant-dashboard__greeting">
      <h1 class="tenant-dashboard__title">
        {{ 'Mi Dashboard'|t }}
      </h1>
      <p class="tenant-dashboard__subtitle">
        {{ 'Bienvenido a tu panel de control, '|t }}<strong>{{ tenant.label }}</strong>
      </p>
    </div>
    <div class="tenant-dashboard__actions">
      <a href="{{ path('ecosistema_jaraba_core.tenant_self_service.settings') }}" class="tenant-btn tenant-btn--secondary">
        ‚öôÔ∏è {{ 'Configuraci√≥n'|t }}
      </a>
    </div>
  </header>

  {# Banner de estado de suscripci√≥n #}
  {% if subscription_info %}
  <div class="tenant-subscription-banner tenant-subscription-banner--{{ subscription_info.status_class }}">
    <div class="tenant-subscription-banner__info">
      <span class="tenant-subscription-banner__plan">{{ subscription_info.plan_name }}</span>
      <span class="tenant-subscription-banner__status {{ subscription_info.status_class }}">
        {{ subscription_info.status_label }}
      </span>
    </div>
    
    {% if subscription_info.is_trial and subscription_info.trial_days_remaining > 0 %}
    <div class="tenant-subscription-banner__trial">
      <span class="tenant-trial-badge">
        ‚è∞ {{ subscription_info.trial_days_remaining }} {{ 'd√≠as restantes de prueba'|t }}
      </span>
      <a href="{{ path('ecosistema_jaraba_core.tenant.change_plan') }}" class="tenant-btn tenant-btn--primary tenant-btn--sm">
        {{ 'Elegir Plan'|t }}
      </a>
    </div>
    {% endif %}
  </div>
  {% endif %}

  {# Grid de m√©tricas principales #}
  <section class="tenant-metrics-grid">
    {% for key, metric in metrics %}
    <div class="tenant-metric-card">
      <span class="tenant-metric-card__icon">{{ metric.icon }}</span>
      <div class="tenant-metric-card__content">
        <span class="tenant-metric-card__value">{{ metric.value }}</span>
        <span class="tenant-metric-card__label">{{ metric.label }}</span>
        <span class="tenant-metric-card__description">{{ metric.description }}</span>
      </div>
      {% if metric.trend != 0 %}
      <span class="tenant-metric-card__trend tenant-metric-card__trend--{{ metric.trend > 0 ? 'up' : 'down' }}">
        {{ metric.trend > 0 ? '‚Üë' : '‚Üì' }} {{ metric.trend|abs }}%
      </span>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  {# Contenedor de dos columnas #}
  <div class="tenant-dashboard__grid">
    
    {# Gr√°fico de Ventas #}
    <section class="tenant-chart-section">
      <h2 class="tenant-section-title">üìà {{ 'Ventas (√∫ltimos 30 d√≠as)'|t }}</h2>
      <div class="tenant-chart-container" data-chart-type="sales" data-chart-id="sales-trend">
        <div class="tenant-chart-canvas-wrapper">
          <canvas id="sales-trend-chart" height="250"></canvas>
        </div>
        <div class="tenant-chart-summary"></div>
      </div>
    </section>

    {# Gr√°fico de MRR #}
    <section class="tenant-chart-section">
      <h2 class="tenant-section-title">üí∞ {{ 'MRR (√∫ltimos 6 meses)'|t }}</h2>
      <div class="tenant-chart-container" data-chart-type="mrr" data-chart-id="mrr-trend">
        <div class="tenant-chart-canvas-wrapper">
          <canvas id="mrr-trend-chart" height="250"></canvas>
        </div>
        <div class="tenant-chart-summary"></div>
      </div>
    </section>
    
  </div>

  {# Fila de actividad y clientes #}
  <div class="tenant-dashboard__grid">
    
    {# Actividad Reciente #}
    <section class="tenant-activity-section">
      <h2 class="tenant-section-title">üìã {{ 'Actividad Reciente'|t }}</h2>
      <div class="tenant-activity-list">
        {% for activity in recent_activity %}
        <div class="tenant-activity-item tenant-activity-item--{{ activity.type }}">
          <div class="tenant-activity-item__info">
            <span class="tenant-activity-item__desc">{{ activity.description }}</span>
            {% if activity.date %}
            <span class="tenant-activity-item__date">{{ activity.date }}</span>
            {% endif %}
          </div>
          {% if activity.amount %}
          <span class="tenant-activity-item__amount">{{ activity.amount }}</span>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </section>

    {# Gr√°fico de Clientes #}
    <section class="tenant-chart-section">
      <h2 class="tenant-section-title">üë• {{ 'Clientes por Semana'|t }}</h2>
      <div class="tenant-chart-container" data-chart-type="customers" data-chart-id="customers-trend">
        <div class="tenant-chart-canvas-wrapper">
          <canvas id="customers-trend-chart" height="250"></canvas>
        </div>
      </div>
    </section>
    
  </div>

  {# Enlaces r√°pidos #}
  <section class="tenant-quick-links">
    <h2 class="tenant-section-title">{{ 'Acciones R√°pidas'|t }}</h2>
    <div class="tenant-quick-links__grid">
      <a href="{{ path('ecosistema_jaraba_core.tenant.change_plan') }}" class="tenant-quick-link">
        <span class="tenant-quick-link__icon">üí≥</span>
        <span class="tenant-quick-link__label">{{ 'Cambiar Plan'|t }}</span>
      </a>
      <a href="{{ path('ecosistema_jaraba_core.tenant_self_service.settings') }}" class="tenant-quick-link">
        <span class="tenant-quick-link__icon">‚öôÔ∏è</span>
        <span class="tenant-quick-link__label">{{ 'Configuraci√≥n'|t }}</span>
      </a>
      <a href="#" class="tenant-quick-link tenant-quick-link--disabled">
        <span class="tenant-quick-link__icon">üì¶</span>
        <span class="tenant-quick-link__label">{{ 'Mis Productos'|t }}</span>
      </a>
      <a href="#" class="tenant-quick-link tenant-quick-link--disabled">
        <span class="tenant-quick-link__icon">üí¨</span>
        <span class="tenant-quick-link__label">{{ 'Soporte'|t }}</span>
      </a>
    </div>
  </section>

</div>

<style>
