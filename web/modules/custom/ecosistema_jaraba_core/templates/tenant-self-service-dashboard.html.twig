}

.tenant-subscription-banner__status.status--warning {
  background: #fee2e2;
  color: #dc2626;
}

.tenant-subscription-banner__trial {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.tenant-trial-badge {
  color: #d97706;
  font-weight: 500;
}

/* Botones */
.tenant-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.25rem;
  border-radius: 0.5rem;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s;
  border: none;
  cursor: pointer;
}

.tenant-btn--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.tenant-btn--primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.tenant-btn--secondary {
  background: #f1f5f9;
  color: #475569;
}

.tenant-btn--secondary:hover {
  background: #e2e8f0;
}

.tenant-btn--sm {
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
}

/* Grid de m√©tricas */
.tenant-metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.tenant-metric-card {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 1rem;
