}

.tenant-badge--coming-soon {
  background: #fef3c7;
  color: #d97706;
}

/* Quick Links */
.tenant-quick-links {
  margin-top: 1rem;
}

.tenant-quick-links__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1rem;
}

.tenant-quick-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.25rem;
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 0.75rem;
  text-decoration: none;
  color: #475569;
  transition: all 0.2s;
}

.tenant-quick-link:hover {
  background: #f8fafc;
  border-color: #3b82f6;
  color: #3b82f6;
}

.tenant-quick-link--disabled {
  opacity: 0.6;
  cursor: not-allowed;
  pointer-events: none;
}

.tenant-quick-link__icon {
  font-size: 1.25rem;
}

.tenant-quick-link__label {
  font-weight: 500;
}

@media (max-width: 640px) {
  .tenant-dashboard {
    padding: 1rem;
  }
  
  .tenant-dashboard__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .tenant-dashboard__title {
    font-size: 1.5rem;
  }
  
  .tenant-subscription-banner {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }
}

/* Estilos de Chart.js containers */
.tenant-chart-container {
  min-height: 280px;
}

.tenant-chart-canvas-wrapper {
  position: relative;
  height: 250px;
  width: 100%;
}

.tenant-chart-summary {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid #e2e8f0;
}

.tenant-chart-summary__item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tenant-chart-summary__label {
  font-size: 0.75rem;
