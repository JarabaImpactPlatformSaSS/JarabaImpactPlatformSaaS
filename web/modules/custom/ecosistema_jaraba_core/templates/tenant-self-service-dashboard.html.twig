}

.tenant-metric-card__content {
  display: flex;
  flex-direction: column;
}

.tenant-metric-card__value {
  font-size: 1.5rem;
  font-weight: 700;
  color: #1e293b;
}

.tenant-metric-card__label {
  font-size: 0.875rem;
  font-weight: 600;
  color: #475569;
}

.tenant-metric-card__description {
  font-size: 0.75rem;
  color: #94a3b8;
}

.tenant-metric-card__trend {
  margin-left: auto;
  font-size: 0.875rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
}

.tenant-metric-card__trend--up {
  background: #dcfce7;
  color: #16a34a;
}

.tenant-metric-card__trend--down {
  background: #fee2e2;
  color: #dc2626;
}

/* Grid de dos columnas */
.tenant-dashboard__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .tenant-dashboard__grid {
    grid-template-columns: 1fr;
  }
}

/* Secci√≥n de actividad */
.tenant-activity-section,
.tenant-chart-section {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 1rem;
  padding: 1.5rem;
}

.tenant-section-title {
  font-size: 1rem;
  font-weight: 600;
  color: #1e293b;
  margin: 0 0 1rem;
}

.tenant-activity-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.tenant-activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem;
  background: #f8fafc;
  border-radius: 0.5rem;
}

.tenant-activity-item__info {
  display: flex;
  flex-direction: column;
}

.tenant-activity-item__desc {
  font-weight: 500;
  color: #1e293b;
}

.tenant-activity-item__date {
  font-size: 0.75rem;
  color: #94a3b8;
}

.tenant-activity-item__amount {
  font-weight: 600;
  color: #16a34a;
}

/* Placeholder */
.tenant-placeholder-card {
  text-align: center;
  padding: 2rem;
}

.tenant-placeholder-card__icon {
