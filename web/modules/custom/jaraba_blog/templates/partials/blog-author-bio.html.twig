{#
/**
 * @file
 * blog-author-bio.html.twig - Bio del autor con avatar y redes sociales.
 *
 * Variables:
 *   - author: Entidad BlogAuthor
 *   - posts_count: Numero de posts del autor
 */
#}
<div class="blog-author-bio" itemscope itemtype="https://schema.org/Person">
  <div class="blog-author-bio__avatar">
    {% if author.get('avatar').entity %}
      <img src="{{ file_url(author.get('avatar').entity.getFileUri()) }}"
           alt="{{ author.getDisplayName() }}"
           class="blog-author-bio__avatar-img"
           loading="lazy"
           itemprop="image" />
    {% else %}
      <div class="blog-author-bio__avatar-placeholder">
        {{ author.getDisplayName()|first|upper }}
      </div>
    {% endif %}
  </div>

  <div class="blog-author-bio__info">
    <h3 class="blog-author-bio__name" itemprop="name">
      <a href="/blog/autor/{{ author.getSlug() }}">{{ author.getDisplayName() }}</a>
    </h3>

    {% if author.getBio() %}
      <p class="blog-author-bio__text" itemprop="description">{{ author.getBio() }}</p>
    {% endif %}

    {% if posts_count > 0 %}
      <span class="blog-author-bio__posts-count">
        {{ posts_count }} {% trans %}entradas{% endtrans %}
      </span>
    {% endif %}

    {# Redes sociales #}
    {% set social = author.getSocialLinks() %}
    {% if social|length > 0 %}
      <div class="blog-author-bio__social">
        {% if social.twitter is defined %}
          <a href="{{ social.twitter }}" class="blog-author-bio__social-link" target="_blank" rel="noopener" aria-label="Twitter">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
              <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
            </svg>
          </a>
        {% endif %}
        {% if social.linkedin is defined %}
          <a href="{{ social.linkedin }}" class="blog-author-bio__social-link" target="_blank" rel="noopener" aria-label="LinkedIn">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
              <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
            </svg>
          </a>
        {% endif %}
        {% if social.website is defined %}
          <a href="{{ social.website }}" class="blog-author-bio__social-link" target="_blank" rel="noopener" aria-label="{% trans %}Sitio web{% endtrans %}">
            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
              <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
