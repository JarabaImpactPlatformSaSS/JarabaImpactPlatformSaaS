<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Arial, Helvetica, sans-serif" />
      <mj-text font-size="14px" color="#374151" line-height="1.6" />
      <mj-button background-color="#FF8C42" color="#ffffff" font-size="16px" border-radius="6px" inner-padding="12px 28px" />
      <mj-section padding="0px" />
    </mj-attributes>
    <mj-style>
      .footer-link { color: #6b7280 !important; text-decoration: underline; }
      .plan-feature { padding: 8px 0; border-bottom: 1px solid #e5e7eb; }
      .plan-feature:last-child { border-bottom: none; }
      .check-icon { color: #556B2F; font-weight: bold; margin-right: 8px; }
      .upgrade-banner { background: linear-gradient(135deg, #556B2F 0%, #6B8E23 100%); border-radius: 8px; padding: 20px; text-align: center; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f3f4f6" width="600px">
    <!-- Header -->
    <mj-section background-color="#556B2F" padding="20px 0">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="24px" font-weight="bold">
          {{ t('AgroConecta') }}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Contenido -->
    <mj-section background-color="#ffffff" padding="32px 24px">
      <mj-column>
        <mj-text font-size="22px" font-weight="bold" color="#556B2F" padding-bottom="8px">
          {{ t('Est&aacute;s creciendo r&aacute;pido') }}
        </mj-text>
        <mj-text>
          <p>{{ t('Hola') }} {{ user_name }},</p>
          <p>{{ t('Has alcanzado el <strong>{{ usage_pct }}%</strong> de tu l&iacute;mite de productos en el plan Gratuito. &iexcl;Eso es se&ntilde;al de que tu negocio est&aacute; despegando!') }}</p>
        </mj-text>
        <mj-text font-size="16px" font-weight="bold" color="#556B2F" padding-top="16px">
          {{ t('Con el Plan Starter desbloqueas:') }}
        </mj-text>
        <mj-text>
          <div class="plan-feature"><span class="check-icon">&check;</span> {{ t('Hasta {{ starter_product_limit }} productos publicados') }}</div>
          <div class="plan-feature"><span class="check-icon">&check;</span> {{ t('Hasta {{ starter_order_limit }} pedidos al mes') }}</div>
          <div class="plan-feature"><span class="check-icon">&check;</span> {{ t('Comisi&oacute;n reducida al {{ starter_commission }}%') }}</div>
          <div class="plan-feature"><span class="check-icon">&check;</span> {{ t('C&oacute;digos QR de trazabilidad') }}</div>
          <div class="plan-feature"><span class="check-icon">&check;</span> {{ t('Soporte prioritario por email') }}</div>
        </mj-text>
        <mj-button href="{{ upgrade_url }}" align="center" padding="24px 0">
          {{ t('Ver Plan Starter') }}
        </mj-button>
        <mj-text font-size="13px" color="#6b7280" align="center">
          {{ t('Desde solo {{ starter_price }}/mes. Sin permanencia, cancela cuando quieras.') }}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section padding="24px">
      <mj-column>
        <mj-divider border-color="#e5e7eb" border-width="1px" />
        <mj-text align="center" font-size="12px" color="#6b7280" padding-top="16px">
          &copy; {{ current_year }} {{ site_name }}. {{ t('Todos los derechos reservados.') }}
        </mj-text>
        <mj-text align="center" font-size="12px" color="#6b7280">
          <a href="{{ unsubscribe_url }}" class="footer-link">{{ t('Cancelar suscripci&oacute;n') }}</a> &nbsp;|&nbsp;
          <a href="{{ site_url }}/privacy" class="footer-link">{{ t('Pol&iacute;tica de privacidad') }}</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
