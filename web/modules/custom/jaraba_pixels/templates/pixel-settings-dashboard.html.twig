{#
/**
 * @file
 * Template para el dashboard de configuración de Pixels.
 *
 * Variables disponibles:
 * - platforms: Array de plataformas con su estado y configuración.
 * - stats: Estadísticas globales de eventos enviados.
 * - tenant_id: ID del tenant actual.
 *
 * Refs:
 * - Workflow SCSS: Variables inyectables var(--ej-*)
 * - Workflow Iconografía: jaraba_icon() con paleta de marca
 * - Workflow Frontend: slide-panel para modales
 */
#}

<div class="pixel-settings-dashboard">
  {# ============================================ #}
  {# HERO HEADER CON PARTÍCULAS                  #}
  {# ============================================ #}
  <header class="analytics-dashboard__hero pixel-settings__hero">
    <canvas class="analytics-dashboard__particles" id="pixel-particles"></canvas>
    <div class="analytics-dashboard__hero-content">
      {# Navegación de retorno DENTRO del hero con estilo premium #}
      <div class="analytics-dashboard__nav">
        <a href="{{ path('jaraba_page_builder.analytics_dashboard') }}" class="analytics-dashboard__back">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          {% trans %}Volver a Analytics{% endtrans %}
        </a>
      </div>
      
      <div class="analytics-dashboard__hero-info">
        <div class="analytics-dashboard__hero-icon">
          {{ jaraba_icon('analytics', 'chart-line', { variant: 'duotone', size: '56px', color: 'white' }) }}
        </div>
        <div class="analytics-dashboard__titles">
          <h1 class="analytics-dashboard__title">
            {% trans %}Gestión de Pixels{% endtrans %}
          </h1>
          <p class="analytics-dashboard__subtitle">
            {% trans %}Configura tus integraciones de marketing para tracking server-side.{% endtrans %}
          </p>
        </div>
      </div>
    </div>
  </header>

  {# Stats Overview #}
  {% if stats.total > 0 %}
  <section class="pixel-settings__stats">
    <h2 class="visually-hidden">{{ 'Estadísticas'|t }}</h2>
    <div class="pixel-stats-grid">
      <div class="pixel-stat-card pixel-stat-card--total">
        <span class="pixel-stat-card__value">{{ stats.total|number_format }}</span>
        <span class="pixel-stat-card__label">{{ 'Eventos (7 días)'|t }}</span>
      </div>
      <div class="pixel-stat-card pixel-stat-card--success">
        {{ jaraba_icon('ui', 'check-circle', { color: 'success', size: '20px' }) }}
        <span class="pixel-stat-card__value">{{ stats.by_status.sent|default(0)|number_format }}</span>
        <span class="pixel-stat-card__label">{{ 'Enviados'|t }}</span>
      </div>
      <div class="pixel-stat-card pixel-stat-card--error">
        {{ jaraba_icon('ui', 'x-circle', { color: 'danger', size: '20px' }) }}
        <span class="pixel-stat-card__value">{{ stats.by_status.failed|default(0)|number_format }}</span>
        <span class="pixel-stat-card__label">{{ 'Fallidos'|t }}</span>
      </div>
      <div class="pixel-stat-card pixel-stat-card--skipped">
        {{ jaraba_icon('ui', 'minus-circle', { color: 'neutral', size: '20px' }) }}
        <span class="pixel-stat-card__value">{{ stats.by_status.skipped|default(0)|number_format }}</span>
        <span class="pixel-stat-card__label">{{ 'Sin consentimiento'|t }}</span>
      </div>
    </div>
  </section>
  {% endif %}

  {# Platforms Grid #}
  <section class="pixel-settings__platforms">
    <h2 class="pixel-settings__section-title">
      {{ jaraba_icon('analytics', 'broadcast', { variant: 'duotone', color: 'corporate', size: '20px' }) }}
      {% trans %}Plataformas{% endtrans %}
    </h2>

    <div class="pixel-platforms-grid">
      {% for key, platform in platforms %}
      <article class="pixel-platform-card {{ platform.coming_soon ? 'pixel-platform-card--coming-soon' : '' }} {{ platform.configured ? 'pixel-platform-card--configured' : '' }}" data-platform="{{ key }}">
        
        {# Status Badge #}
        <div class="pixel-platform-card__status">
          {% if platform.coming_soon %}
            <span class="pixel-badge pixel-badge--soon">{{ 'Próximamente'|t }}</span>
          {% elseif platform.configured %}
            {% if platform.status == 'enabled' %}
              <span class="pixel-badge pixel-badge--active">{{ 'Activo'|t }}</span>
            {% elseif platform.status == 'error' %}
              <span class="pixel-badge pixel-badge--error">{{ 'Error'|t }}</span>
            {% else %}
              <span class="pixel-badge pixel-badge--disabled">{{ 'Desactivado'|t }}</span>
            {% endif %}
          {% endif %}
        </div>

        {# Platform Icon & Name #}
        <div class="pixel-platform-card__header">
          <div class="pixel-platform-card__logo pixel-platform-card__logo--{{ key }}">
            {% if key == 'meta' %}
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.04c-5.5 0-10 4.49-10 10.02 0 5 3.66 9.15 8.44 9.9v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.24.19 2.24.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 008.44-9.9c0-5.53-4.5-10.02-10-10.02z"/></svg>
            {% elseif key == 'google' %}
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"/></svg>
            {% elseif key == 'linkedin' %}
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            {% elseif key == 'tiktok' %}
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
            {% endif %}
          </div>
          <div class="pixel-platform-card__info">
            <h3 class="pixel-platform-card__name">{{ platform.name }}</h3>
            <p class="pixel-platform-card__description">{{ platform.description }}</p>
          </div>
        </div>

        {# Stats (if configured) #}
        {% if platform.configured and platform.stats.total > 0 %}
        <div class="pixel-platform-card__stats">
          <span class="pixel-platform-card__stat">
            {{ jaraba_icon('ui', 'check', { color: 'success', size: '14px' }) }}
            {{ platform.stats.sent }} {{ 'enviados'|t }}
          </span>
          {% if platform.stats.failed > 0 %}
          <span class="pixel-platform-card__stat pixel-platform-card__stat--error">
            {{ jaraba_icon('ui', 'x', { color: 'danger', size: '14px' }) }}
            {{ platform.stats.failed }} {{ 'fallidos'|t }}
          </span>
          {% endif %}
        </div>
        {% endif %}

        {# Actions - usando slide-panel para configuración #}
        <div class="pixel-platform-card__actions">
          {% if platform.coming_soon %}
            <button class="btn btn--secondary btn--sm" disabled>
              {{ 'Próximamente'|t }}
            </button>
          {% elseif platform.configured %}
            <button class="btn btn--outline btn--sm js-test-connection" data-platform="{{ key }}">
              {{ jaraba_icon('actions', 'refresh', { size: '16px' }) }}
              {{ 'Test'|t }}
            </button>
            <a href="/api/v1/pixels/config-form/{{ key }}" {# AUDIT-CONS-N07 #} 
               data-slide-panel="medium"
               data-slide-panel-title="{% trans %}Editar{% endtrans %} {{ platform.name }}"
               class="btn btn--primary btn--sm">
              {{ jaraba_icon('actions', 'edit', { size: '16px' }) }}
              {{ 'Editar'|t }}
            </a>
          {% else %}
            <a href="/api/v1/pixels/config-form/{{ key }}" {# AUDIT-CONS-N07 #} 
               data-slide-panel="medium"
               data-slide-panel-title="{% trans %}Configurar{% endtrans %} {{ platform.name }}"
               class="btn btn--primary btn--sm">
              {{ jaraba_icon('actions', 'plus', { size: '16px' }) }}
              {{ 'Configurar'|t }}
            </a>
          {% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
  </section>
</div>
