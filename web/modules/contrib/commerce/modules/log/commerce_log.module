<?php

/**
 * @file
 * Provides activity logs for Commerce entities.
 */

use Drupal\commerce_log\Hook\CommerceLogHooks;
use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Hook\Attribute\LegacyHook;

/**
 * Implements hook_preprocess_commerce_order().
 */
#[LegacyHook]
function commerce_log_preprocess_commerce_order(&$variables): void {
  \Drupal::service(CommerceLogHooks::class)->preprocessCommerceOrder($variables);
}

/**
 * Implements hook_form_FORM_ID_alter() for 'commerce_order_add_form'.
 */
#[LegacyHook]
function commerce_log_form_commerce_order_add_form_alter(array &$form, FormStateInterface $form_state): void {
  \Drupal::service(CommerceLogHooks::class)->commerceOrderAddFormAlter($form, $form_state);
}

/**
 * Implements hook_views_data().
 */
#[LegacyHook]
function commerce_log_views_data(): array {
  return \Drupal::service(CommerceLogHooks::class)->viewsData();
}
