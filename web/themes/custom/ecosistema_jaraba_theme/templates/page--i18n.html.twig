{#
/**
 * @file
 * page--i18n.html.twig - Dashboard de traducciones frontend limpio.
 *
 * NOTA: Este es un PAGE template, NO un HTML template. El wrapper
 * DOCTYPE/html/head/body lo proporciona html.html.twig. Este template
 * solo genera el contenido dentro de body.
 *
 * ARQUITECTURA LIMPIA (mismo patrón que page--site-builder.html.twig):
 * - Zero Region Policy — usa {{ clean_content }}
 * - Usa {% include %} de partials reutilizables
 * - i18n con {% trans %}
 * - Variables CSS var(--ej-*)
 * - Full-width layout
 *
 * PROPÓSITO: Página frontend limpia para gestión de traducciones.
 * RUTA: /i18n
 *
 * DIRECTRICES CUMPLIDAS:
 * - Sin regiones heredadas de Drupal
 * - Partials reutilizables (header, footer)
 * - Full-width mobile-first
 * - Variables configurables desde UI
 */
#}
{% set site_name = site_name|default('Jaraba Impact Platform') %}

{{ attach_library('ecosistema_jaraba_theme/global') }}
{{ attach_library('jaraba_i18n/i18n-dashboard') }}

  {# HEADER - Partial reutilizable con variables de tema #}
  {% include '@ecosistema_jaraba_theme/partials/_header.html.twig' with {
    site_name: site_name,
    logo: logo|default(''),
    logged_in: logged_in,
    theme_settings: theme_settings|default({})
  } %}

  {# MAIN CONTENT - Full-width layout #}
  <main id="main-content" class="dashboard-main i18n-main">
    {% if clean_messages %}
      <div class="highlighted container">
        {{ clean_messages }}
      </div>
    {% endif %}

    {# Contenedor del dashboard sin márgenes para hero full-width #}
    <div class="dashboard-wrapper dashboard-wrapper--full">
      {{ clean_content }}
    </div>
  </main>

  {# FOOTER - Partial configurable desde UI #}
  {% include '@ecosistema_jaraba_theme/partials/_footer.html.twig' with {
    site_name: site_name,
    logo: logo|default(''),
    theme_settings: theme_settings|default({})
  } %}

