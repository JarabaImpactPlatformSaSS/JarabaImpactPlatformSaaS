{#
/**
 * @file
 * page--fiscal.html.twig — Dashboard Fiscal Unificado.
 *
 * Template zero-region para /admin/jaraba/fiscal y rutas fiscales.
 * Layout full-width mobile-first con parciales reutilizables.
 *
 * ARQUITECTURA:
 * - Sin {{ page.* }} = Sin bloques/regiones de Drupal
 * - Usa {% include %} de partials reutilizables
 * - i18n con {% trans %}
 * - Variables CSS var(--ej-fiscal-*)
 * - Body class 'page-fiscal' via hook_preprocess_html()
 *
 * PARTIALS:
 * - _header.html.twig: Header con menu movil (reutilizado)
 * - _footer.html.twig: Footer configurable (reutilizado)
 * - _copilot-fab.html.twig: FAB de copiloto contextual
 *
 * Plan Implementacion Stack Cumplimiento Fiscal v1 — FASE 0, entregable F0-7.
 *
 * @see ecosistema_jaraba_theme.theme para preprocess
 */
#}
{% set site_name = site_name|default('Jaraba Impact Platform') %}
{% set site_slogan = site_slogan|default('Impulsando el talento y la innovación') %}

{{ attach_library('ecosistema_jaraba_core/fiscal-styles') }}

<!DOCTYPE html>
<html{{ html_attributes }}>
<head>
  <head-placeholder token="{{ placeholder_token }}">
  <title>{{ head_title|safe_join(' | ') }}</title>
  <css-placeholder token="{{ placeholder_token }}">
  <js-placeholder token="{{ placeholder_token }}">
</head>

<body{{ attributes.addClass('page-fiscal', 'dashboard-page', 'full-width-layout') }}>
  <a href="#main-content" class="visually-hidden focusable skip-link">
    {% trans %}Skip to main content{% endtrans %}
  </a>

  {# HEADER — Partial reutilizable con menu movil #}
  {% include '@ecosistema_jaraba_theme/partials/_header.html.twig' with {
    site_name: site_name,
    site_slogan: site_slogan,
    logo: logo,
    logged_in: logged_in,
    theme_settings: theme_settings
  } %}

  {# DRUPAL MESSAGES #}
  {% if clean_messages %}
    <div class="fiscal-messages">
      {{ clean_messages }}
    </div>
  {% endif %}

  {# MAIN CONTENT — Dashboard fiscal #}
  <main id="main-content" class="fiscal-main">

    {# PAGE TITLE #}
    <div class="fiscal-main__header">
      <div class="fiscal-main__title-row">
        <h1 class="fiscal-main__title">
          {{ jaraba_icon('fiscal', 'shield-fiscal', { variant: 'duotone', size: '32px' }) }}
          {% trans %}Fiscal Compliance{% endtrans %}
        </h1>
      </div>
    </div>

    {# CONTROLLER CONTENT — Rendered by Drupal controller #}
    {% if clean_content %}
      <div class="fiscal-main__content">
        {{ clean_content }}
      </div>
    {% endif %}

  </main>

  {# FOOTER — Partial configurable desde UI #}
  {% include '@ecosistema_jaraba_theme/partials/_footer.html.twig' with {
    site_name: site_name,
    logo: logo,
    footer_copyright: footer_copyright,
    theme_settings: theme_settings
  } %}

  {# FAB COPILOTO — Asesor Fiscal Contextual #}
  {% include '@ecosistema_jaraba_theme/partials/_copilot-fab.html.twig' with {
    agent_context: 'fiscal_copilot',
    avatar_type: 'fiscal_manager',
    fab_color: 'var(--ej-fiscal-aeat, #1A365D)',
    greeting: '¡Hola! Soy tu asesor fiscal. Puedo ayudarte con VeriFactu, facturación electrónica B2G y B2B, certificados digitales y cumplimiento normativo. ¿En qué puedo asistirte?'|t
  } %}

  {# Drupal Required Placeholders #}
  <js-bottom-placeholder token="{{ placeholder_token }}">

</body>
</html>
