{#
/**
 * @file
 * Header variante: Transparent
 *
 * Transparente sobre hero, se vuelve sólido al scroll.
 * Uso: Landings, hero fullscreen.
 */
#}
<header class="header header--transparent" role="banner" data-scroll-sticky>
  <div class="header__container container">
    {# Logo con versión clara/oscura #}
    <div class="header__brand">
      {% if logo_url %}
        <a href="{{ path('<front>') }}" class="header__logo-link" rel="home">
          <img src="{{ logo_url }}" alt="{{ site_name }}" class="header__logo header__logo--light" />
          {% if logo_dark_url %}
            <img src="{{ logo_dark_url }}" alt="{{ site_name }}" class="header__logo header__logo--dark" />
          {% endif %}
        </a>
      {% else %}
        <a href="{{ path('<front>') }}" class="header__site-name" rel="home">
          {{ site_name }}
        </a>
      {% endif %}
    </div>

    {# Navegación con estilo transparente #}
    <nav class="header__nav header__nav--transparent" aria-label="{{ 'Main navigation'|t }}">
      {{ main_menu }}
    </nav>

    {# Acciones #}
    <div class="header__actions">
      {% if not user_logged_in %}
        <a href="{{ path('user.login') }}" class="btn btn--ghost btn--sm">
          {{ 'Acceder'|t }}
        </a>
      {% endif %}
      
      {% if header_cta %}
        <a href="{{ header_cta.url }}" class="btn btn--primary btn--sm">
          {{ header_cta.text }}
        </a>
      {% endif %}
    </div>

    <button class="header__mobile-toggle header__mobile-toggle--light" aria-label="{{ 'Toggle menu'|t }}">
      {{ jaraba_icon('ui', 'menu', { size: '24px' }) }}
    </button>
  </div>
</header>
