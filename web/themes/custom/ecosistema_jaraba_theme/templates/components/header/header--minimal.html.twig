{#
/**
 * @file
 * Header variante: Minimal
 *
 * Header ultra minimalista, solo logo centrado.
 * Uso: Checkout, formularios, landing pages sin distracción.
 */
#}
<header class="header header--minimal" role="banner">
  <div class="header__container container">
    {# Logo centrado #}
    <div class="header__brand header__brand--center">
      {% if logo_url %}
        <a href="{{ path('<front>') }}" class="header__logo-link" rel="home">
          <img src="{{ logo_url }}" alt="{{ site_name }}" class="header__logo" />
        </a>
      {% else %}
        <a href="{{ path('<front>') }}" class="header__site-name" rel="home">
          {{ site_name }}
        </a>
      {% endif %}
    </div>

    {# Acción opcional (cerrar, volver) #}
    {% if show_close %}
      <a href="{{ close_url|default(path('<front>')) }}" class="header__close" aria-label="{% trans %}Cerrar{% endtrans %}">
        {{ jaraba_icon('ui', 'x', { size: '24px' }) }}
      </a>
    {% endif %}

    {% if show_back %}
      <a href="{{ back_url }}" class="header__back">
        {{ jaraba_icon('ui', 'arrow-left', { size: '20px' }) }}
        {% trans %}Volver{% endtrans %}
      </a>
    {% endif %}

    {# Indicador de paso (para wizards) #}
    {% if steps %}
      <div class="header__steps">
        {% for step in steps %}
          <div class="header__step {{ step.current ? 'header__step--current' : '' }} {{ step.completed ? 'header__step--completed' : '' }}">
            <span class="header__step-number">{{ loop.index }}</span>
            <span class="header__step-label">{{ step.label }}</span>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</header>
