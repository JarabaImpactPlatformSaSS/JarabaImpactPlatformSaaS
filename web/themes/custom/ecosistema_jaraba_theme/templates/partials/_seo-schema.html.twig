{#
/**
 * @file
 * _seo-schema.html.twig
 *
 * Genera datos estructurados (Schema.org) en formato JSON-LD.
 * Ayuda a Google a entender que el sitio es una Organización y SaaS.
 */
#}
{% set site_name = site_name|default('Jaraba Impact Platform') %}
{% set site_url = url('<front>', {}, {absolute: true}) %}
{% set logo_url = logo ? logo : (site_url ~ 'themes/custom/ecosistema_jaraba_theme/logo.svg') %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ site_name }}",
  "url": "{{ site_url }}",
  "logo": "{{ logo_url }}",
  "description": "{{ 'Plataforma SaaS de impacto para la gestión de ecosistemas locales. +100M€ en fondos europeos gestionados.'|t }}",
  "founder": {
    "@type": "Person",
    "name": "Pepe Jaraba",
    "jobTitle": "{{ 'Fundador y Director de Ecosistemas Digitales'|t }}"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Spain"
  },
  "sameAs": [
    "https://facebook.com/JarabaImpact",
    "https://x.com/JarabaEcosistema",
    "https://linkedin.com/company/jaraba-impact"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+34-900-000-000",
    "contactType": "customer service",
    "areaServed": "ES",
    "availableLanguage": ["Spanish", "English"]
  }
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "{{ site_name }}",
  "url": "{{ site_url }}",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "All",
  "abstract": "{{ 'Conecta talento, negocios y emprendedores con inteligencia artificial. 6 verticales especializados, copiloto IA integrado.'|t }}",
  "offers": {
    "@type": "AggregateOffer",
    "lowPrice": "0",
    "highPrice": "99",
    "priceCurrency": "EUR",
    "offerCount": "3"
  },
  "featureList": [
    "{{ 'Copiloto IA personalizado'|t }}",
    "{{ 'Empleabilidad y desarrollo profesional'|t }}",
    "{{ 'Emprendimiento y aceleración'|t }}",
    "{{ 'AgroConecta - Trazabilidad agroalimentaria'|t }}",
    "{{ 'ComercioConecta - Digitalización comercio local'|t }}",
    "{{ 'SEO local y GEO automático'|t }}"
  ]
}
</script>

