{#
/**
 * @file
 * _auth-social-buttons.html.twig
 *
 * Botones OAuth para Google, LinkedIn y Microsoft via social_auth contrib.
 * Se incluye en page--auth.html.twig para login y registro.
 *
 * Variables:
 * - auth_type: 'login' | 'register'
 */
#}

<div class="auth-social" role="group" aria-label="{% trans %}Acceso con redes sociales{% endtrans %}">
  <div class="auth-social__divider">
    <span class="auth-social__divider-text">
      {% if auth_type == 'register' %}
        {% trans %}o reg√≠strate con{% endtrans %}
      {% else %}
        {% trans %}o accede con{% endtrans %}
      {% endif %}
    </span>
  </div>

  <div class="auth-social__buttons">
    {# Google OAuth #}
    <a href="/user/login/google" class="auth-social__btn auth-social__btn--google"
       data-track-cta="social_auth_google"
       data-track-position="auth_form">
      <svg class="auth-social__icon" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18A10.96 10.96 0 001 12c0 1.77.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      <span>Google</span>
    </a>

    {# LinkedIn OAuth #}
    <a href="/user/login/linkedin" class="auth-social__btn auth-social__btn--linkedin"
       data-track-cta="social_auth_linkedin"
       data-track-position="auth_form">
      <svg class="auth-social__icon" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="#0A66C2"/>
      </svg>
      <span>LinkedIn</span>
    </a>

    {# Microsoft OAuth #}
    <a href="/user/login/microsoft" class="auth-social__btn auth-social__btn--microsoft"
       data-track-cta="social_auth_microsoft"
       data-track-position="auth_form">
      <svg class="auth-social__icon" viewBox="0 0 24 24" aria-hidden="true">
        <rect x="1" y="1" width="10" height="10" fill="#F25022"/>
        <rect x="13" y="1" width="10" height="10" fill="#7FBA00"/>
        <rect x="1" y="13" width="10" height="10" fill="#00A4EF"/>
        <rect x="13" y="13" width="10" height="10" fill="#FFB900"/>
      </svg>
      <span>Microsoft</span>
    </a>
  </div>
</div>

