{#
/**
 * @file
 * templates/partials/_footer.html.twig
 *
 * Footer reutilizable para todas las páginas.
 * i18n con {% trans %}, variables CSS var(--ej-*)
 *
 * Variables esperadas (desde theme_settings):
 * - site_name: Nombre del sitio
 * - logo: URL del logo
 * - footer_copyright: Texto de copyright
 * - theme_settings.footer_layout: minimal|standard|mega|split
 * - theme_settings.footer_social_*: URLs redes sociales
 * - theme_settings.footer_widget*: Contenido widgets (mega footer)
 */
#}
{% set site_name = site_name|default('Jaraba Impact Platform') %}
{% set ts = theme_settings|default({}) %}
{% set footer_layout = ts.footer_layout|default('standard') %}

<footer class="landing-footer landing-footer--{{ footer_layout }}" role="contentinfo">
  <div class="landing-footer__container">

    {# MEGA FOOTER: 4 columnas configurables #}
    {% if footer_layout == 'mega' and ts.footer_widget1_title %}
      <div class="landing-footer__mega-grid">
        {# Columna 1: Descripción #}
        <div class="landing-footer__widget">
          <h3>{{ ts.footer_widget1_title }}</h3>
          <p>{{ ts.footer_widget1_content|nl2br }}</p>
        </div>

        {# Columna 2: Enlaces #}
        {% if ts.footer_widget2_title %}
          <div class="landing-footer__widget">
            <h3>{{ ts.footer_widget2_title }}</h3>
            <ul>
              {% for line in ts.footer_widget2_content|split('\n') %}
                {% set parts = line|split('|') %}
                {% if parts|length == 2 %}
                  <li><a href="{{ parts[1]|trim }}">{{ parts[0]|trim }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {# Columna 3: Recursos #}
        {% if ts.footer_widget3_title %}
          <div class="landing-footer__widget">
            <h3>{{ ts.footer_widget3_title }}</h3>
            <ul>
              {% for line in ts.footer_widget3_content|split('\n') %}
                {% set parts = line|split('|') %}
                {% if parts|length == 2 %}
                  <li><a href="{{ parts[1]|trim }}">{{ parts[0]|trim }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {# Columna 4: Contacto #}
        {% if ts.footer_widget4_title %}
          <div class="landing-footer__widget">
            <h3>{{ ts.footer_widget4_title }}</h3>
            <p>{{ ts.footer_widget4_content|nl2br }}</p>
          </div>
        {% endif %}
      </div>

    {# STANDARD/SPLIT FOOTER: Navegación configurable desde theme_settings #}
    {% else %}
      {% set col1_title = ts.footer_nav_col1_title|default('Plataforma') %}
      {% set col1_links = ts.footer_nav_col1_links|default("Empleabilidad|/empleo\nEmprendimiento|/emprender\nComercio|/productos\nInstituciones|/instituciones") %}
      {% set col2_title = ts.footer_nav_col2_title|default('Empresa') %}
      {% set col2_links = ts.footer_nav_col2_links|default("Sobre nosotros|/sobre-nosotros\nCasos de Éxito|/casos-de-exito\nContacto|/contacto\nBlog|/blog") %}
      {% set col3_title = ts.footer_nav_col3_title|default('Legal') %}
      {% set col3_links = ts.footer_nav_col3_links|default("Privacidad|/politica-privacidad\nTérminos|/terminos-uso\nCookies|/politica-cookies") %}

      <div class="landing-footer__grid">
        {# Columna 1 #}
        <nav class="landing-footer__nav" aria-label="{{ col1_title }}">
          <h3>{{ col1_title }}</h3>
          <ul>
            {% for line in col1_links|split("\n") %}
              {% set parts = line|split('|') %}
              {% if parts|length >= 2 %}
                <li><a href="{{ parts[1]|trim }}">{{ parts[0]|trim }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>

        {# Columna 2 #}
        <nav class="landing-footer__nav" aria-label="{{ col2_title }}">
          <h3>{{ col2_title }}</h3>
          <ul>
            {% for line in col2_links|split("\n") %}
              {% set parts = line|split('|') %}
              {% if parts|length >= 2 %}
                <li><a href="{{ parts[1]|trim }}">{{ parts[0]|trim }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>

        {# Columna 3 #}
        <nav class="landing-footer__nav" aria-label="{{ col3_title }}">
          <h3>{{ col3_title }}</h3>
          <ul>
            {% for line in col3_links|split("\n") %}
              {% set parts = line|split('|') %}
              {% if parts|length >= 2 %}
                <li><a href="{{ parts[1]|trim }}">{{ parts[0]|trim }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>
      </div>
    {% endif %}

    {# Footer Bottom - Copyright y Social #}
    <div class="landing-footer__bottom">
      <div class="landing-footer__brand-inline">
        {% if logo %}
          <img src="{{ logo }}" alt="{{ site_name }}" class="landing-footer__logo-small" />
        {% endif %}
        <p class="landing-footer__copyright">
          {% if footer_copyright %}
            {{ footer_copyright }}
          {% else %}
            © {{ 'now'|date('Y') }} {{ site_name }}. {% trans %}All rights reserved.{% endtrans %}
          {% endif %}
        </p>
      </div>

      {# Redes Sociales - Configurables desde UI #}
      <div class="landing-footer__social">
        {% if ts.footer_social_linkedin %}
          <a href="{{ ts.footer_social_linkedin }}" aria-label="LinkedIn" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z" fill="currentColor"/></svg>
          </a>
        {% endif %}

        {% if ts.footer_social_twitter %}
          <a href="{{ ts.footer_social_twitter }}" aria-label="X (Twitter)" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z" fill="currentColor"/></svg>
          </a>
        {% endif %}

        {% if ts.footer_social_facebook %}
          <a href="{{ ts.footer_social_facebook }}" aria-label="Facebook" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95z" fill="currentColor"/></svg>
          </a>
        {% endif %}

        {% if ts.footer_social_instagram %}
          <a href="{{ ts.footer_social_instagram }}" aria-label="Instagram" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z" fill="currentColor"/></svg>
          </a>
        {% endif %}

        {% if ts.footer_social_youtube %}
          <a href="{{ ts.footer_social_youtube }}" aria-label="YouTube" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M10 15l5.19-3L10 9v6m11.56-7.83c.13.47.22 1.1.28 1.9.07.8.1 1.49.1 2.09L22 12c0 2.19-.16 3.8-.44 4.83-.25.9-.83 1.48-1.73 1.73-.47.13-1.33.22-2.65.28-1.3.07-2.49.1-3.59.1L12 19c-4.19 0-6.8-.16-7.83-.44-.9-.25-1.48-.83-1.73-1.73-.13-.47-.22-1.1-.28-1.9-.07-.8-.1-1.49-.1-2.09L2 12c0-2.19.16-3.8.44-4.83.25-.9.83-1.48 1.73-1.73.47-.13 1.33-.22 2.65-.28 1.3-.07 2.49-.1 3.59-.1L12 5c4.19 0 6.8.16 7.83.44.9.25 1.48.83 1.73 1.73z" fill="currentColor"/></svg>
          </a>
        {% endif %}

        {# Si no hay redes configuradas, mostrar placeholders #}
        {% if not ts.footer_social_linkedin and not ts.footer_social_twitter and not ts.footer_social_facebook and logged_in %}
          <span class="landing-footer__no-social">{% trans %}Configure social links in theme settings{% endtrans %}</span>
        {% endif %}
      </div>
    </div>

    {# --- BANDA ECOSISTEMA: Navegacion transversal entre dominios del ecosistema --- #}
    {# Regla #68: Configurable por tenant. Default: visible con links del ecosistema. #}
    {% set eco_enabled = (ts.ecosystem_footer_enabled is defined) ? ts.ecosystem_footer_enabled : true %}
    {% set eco_links_default = [
      { name: 'Pepe Jaraba'|t, url: 'https://pepejaraba.com' },
      { name: 'Jaraba Impact'|t, url: 'https://jarabaimpact.com' },
      { name: 'PED Corporativo'|t, url: 'https://plataformadeecosistemas.es' },
      { name: 'Plataforma SaaS'|t, url: 'https://plataformadeempresas.com' },
    ] %}
    {% set eco_links = ts.ecosystem_footer_links|default(eco_links_default) %}
    {% if eco_enabled and eco_links|length > 0 %}
      <div class="landing-footer__ecosystem">
        <span class="landing-footer__ecosystem-label">{% trans %}Ecosistema Jaraba{% endtrans %}</span>
        <nav class="landing-footer__ecosystem-nav" aria-label="{% trans %}Ecosistema Jaraba{% endtrans %}">
          {% for link in eco_links %}
            {% if link.current|default(false) %}
              <span class="landing-footer__ecosystem-link landing-footer__ecosystem-link--current"
                    aria-current="true">
                {{ link.name }}
              </span>
            {% else %}
              <a href="{{ link.url }}"
                 class="landing-footer__ecosystem-link"
                 target="_blank"
                 rel="noopener">
                {{ link.name }}
              </a>
            {% endif %}
            {% if not loop.last %}
              <span class="landing-footer__ecosystem-separator" aria-hidden="true">&middot;</span>
            {% endif %}
          {% endfor %}
        </nav>
      </div>
    {% endif %}

    {# Powered by (configurable) #}
    {% if (ts.footer_show_powered_by is defined) ? ts.footer_show_powered_by : true %}
      <div class="landing-footer__powered">
        <span>{% trans %}Powered by{% endtrans %}
          <a href="{{ ts.footer_powered_url|default('https://jaraba.io') }}" target="_blank" rel="noopener">
            {{ ts.footer_powered_text|default('Jaraba Impact Platform'|t) }}
          </a>
        </span>
      </div>
    {% endif %}

  </div>
</footer>
