# Jaraba Impact Platform SaaS - Environment Variables
# Spec: Doc 159, seccion 5.2
#
# INSTRUCCIONES:
# 1. Copiar este archivo a .env: cp .env.example .env
# 2. Rellenar los valores reales (NO compartir .env)
# 3. El archivo .env esta en .gitignore

# ======================
# DATABASE
# ======================
DB_HOST=database
DB_PORT=3306
DB_NAME=drupal11
DB_USER=drupal11
DB_PASSWORD=drupal11
DB_DRIVER=mysql

# ======================
# REDIS
# ======================
REDIS_HOST=redis
REDIS_PORT=6379

# ======================
# QDRANT (Vector Database)
# ======================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ======================
# TIKA (Document Processing)
# ======================
TIKA_HOST=tika
TIKA_PORT=9998

# ======================
# AI PROVIDERS
# ======================
OPENAI_API_KEY=sk-mock-openai-key-replace-me-in-local-env
ANTHROPIC_API_KEY=sk-ant-mock-anthropic-key-replace-me-in-local-env
GOOGLE_GEMINI_API_KEY=AIza-mock-google-ai-key-replace-me

# ======================
# DRUPAL
# ======================
HASH_SALT=change_this_to_a_random_string
DRUPAL_ENV=development

# ======================
# XDEBUG
# ======================
XDEBUG_MODE=debug
PHP_IDE_CONFIG=serverName=jaraba-saas.lndo.site

# ======================
# STRIPE (Billing)
# ======================
STRIPE_PUBLIC_KEY=pk_test_mock_stripe_publish_key_replace_me
STRIPE_SECRET_KEY=sk_test_mock_stripe_secret_key_replace_me
STRIPE_WEBHOOK_SECRET=whsec_mock_stripe_webhook_secret_replace_me

# ======================
# SOCIAL AUTH — OAuth Providers
# Loaded via config/deploy/settings.secrets.php → $config overrides
# ======================
SOCIAL_AUTH_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
SOCIAL_AUTH_GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret
SOCIAL_AUTH_LINKEDIN_CLIENT_ID=your_linkedin_client_id
SOCIAL_AUTH_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
SOCIAL_AUTH_MICROSOFT_CLIENT_ID=your_microsoft_client_id
SOCIAL_AUTH_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# ======================
# EMAIL — SMTP
# Loaded via config/deploy/settings.secrets.php → $config overrides
# ======================
SMTP_USER=contacto@yourdomain.com
SMTP_PASS=your_smtp_password
SMTP_HOST=smtp.yourprovider.com

# ======================
# RECAPTCHA v3
# Loaded via config/deploy/settings.secrets.php → $config overrides
# ======================
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
